@charset "utf-8";
@import 'variables'

.open_account
	h4
		font-weight 400
		margin 0 0 20rem

	.search_ogrn
		margin-bottom 35rem

.docs_row
	margin-bottom 15rem
	max-width 900rem
	.docs_block
		.file_upload_list
			margin-bottom 15rem


.docs_block
	background cbglight
	padding 20rem 25rem 10rem
	margin-bottom 15rem
	max-width 900rem
	box-sizing border-box
	clearfix()
	.title
		font-size fzn + 4rem
		margin 0 0 15rem
		.icon-info
			margin-left 10rem
	.small_text
		margin 15rem 0

.beneficiar_list
	.beneficiar_item
		margin-bottom 10rem
		&:nth-of-type(2n+1)
			margin-left 0

	.beneficiar_item_name
		font-size fzn + 1rem
		color cl2
		margin 0 0 15rem
		font-weight normal


.podpisant_list
	// overflow hidden
.podpisant_item
	margin 0 0 20rem
	&.minimized
		.podpisant_item_info
			display none

.podpisant_item_name
	position relative
	display block
	padding 0 15rem
	height 42rem
	line-height 39rem
	background #fff
	box-shadow 0rem 1rem 1rem rgba(0,0,0,0.12)
	font-size fzn + 1rem
	font-weight normal
	color cl2
	text-decoration none
	z-index 20
	font-weight 300
	color ctextlight
	a
		font-weight normal
		margin-right 10rem
	.post
		display inline-block
	.podpisant_delete
		float right
		font-size fzn - 2rem
		color ctexterror
		&:before
			vertical-align -2rem
		&:hover
			text-decoration underline

.podpisant_item_info
	margin -22rem -25rem 20rem
	padding 40rem 25rem 20rem
	background cbglight - 5%
	border-top 3rem solid #fff
	border-bottom 3rem solid #fff
	z-index 10

.podpisant_add_link
	display inline-block
	margin-bottom 10rem

.manager_photo
	text-align center
	float left
	img
		border-radius 50%
		width 150rem
		height 150rem
		border 5rem solid #fff
		z-index 10
		position relative
		margin 0 0 8rem
	&:before
		content ''
		width 155rem
		height 155rem
		display block
		border-radius 50%
		background cl3
		position absolute
		left -1rem
		top 8rem
		z-index 1
	&:after
		content ''
		width 157rem
		height 157rem
		display block
		border-radius 50%
		background cl2
		position absolute
		right -1rem
		top -1rem
		z-index 1
.manager_name
	margin 0 0 2rem
.manager_post
	font-size fzn - 2rem
	color ctextlight
.manager_text
	margin 0 0 0 200rem


// активация эцп
.ecp_activation_step
	padding-left 60rem
	.step
		position absolute
		left 20rem
		top 17rem
		font-size fzn + 4rem
		color ctextlight
		font-weight bold
	.circ
		li
			clear both
			overflow hidden