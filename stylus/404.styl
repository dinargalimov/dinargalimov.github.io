@import 'nib'

.page404
	position absolute
	width 100%
	height 100%
	background radial-gradient(68% 100%, #FFFFFF 45%, #E0F3FF 100%)
	background-size 120% auto, 100% 100%
	.logo
		width 270px
		height 50px
		position absolute
		top 40px
		left calc(50% - 135px)
		background url('../images/logo_full_d.svg')
		text-indent -10000em
	.content_wrap
		display table
		width 100%
		height 100%
	.content_cell
		display table-cell
		width 100%
		vertical-align middle
	.content
		width 400px
		margin 0 auto
		text-align center