@import 'variables.styl'

@keyframes fadeIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes pageHide {
	0% {
		opacity 1
		visibility visible
	}

	99% {
		visibility visible
	}
	100% {
		opacity 0
		visibility hidden
		transform translateX(200px)
	}

}

@keyframes pageOpen {
	0% {
		opacity: 0;
		transform translateX(200px)
		visibility visible
	}
	100% {
		opacity: 1;
		transform translateX(0px)
	}
}

@keyframes pageFullsize {
	0% {
		width 66%
	}
	100% {
		width 100%
		max-width 2000px
	}
}
@keyframes pageNorsize {
	0% {
		top 40px
		width 100%
	}
	100% {
		top 65px
		width 66%
	}
}

@keyframes error-border-flash {
	0%{
		border-color rgba(cerror,0)
	}
	100% {
		border-color rgba(cerror,1)
	}
}

@keyframes writeNow {
	from {
		transform translateX(0)
	}
	to {
		transform translateX(10px)
	}
}

