@import 'variables.styl'

@keyframes fadeIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes pageHide {
	0% {
		opacity 1
		visibility visible
	}
	99% {
		visibility visible
	}
	100% {
		opacity 0
		visibility hidden
		transform translateX(200px)
	}

}

@keyframes pageOpen {
	0% {
		opacity: 0;
		transform translateX(200px)
		visibility visible
	}
	100% {
		opacity: 1;
		transform translateX(0px)
	}
}

@keyframes pageFullsize {
	0% {
		width 66%
	}
	100% {
		width 100%
	}
}
@keyframes pageNorsize {
	0% {
		top 40px
		width 100%
	}
	100% {
		top 65px
		width 66%
	}
}

@keyframes error-border-flash {
	0%{
		border-color rgba(cerror,0)
	}
	100% {
		border-color rgba(cerror,1)
	}
}

@keyframes writeNow {
	from {
		transform translateX(0)
	}
	to {
		transform translateX(10px)
	}
}

@keyframes dropShow {
	0% {
		opacity 0
		transform scale(.6)
	}
	100% {
		opacity 1
		transform scale(1)
	}
}
@keyframes dropHide {
	0% {
		opacity 1
		transform scale(1)
	}
	100% {
		opacity 0
		transform scale(0)
	}
}

@keyframes popupOpen {
	0% {
		opacity 0
		transform: scale3d(.8, .8, .8) translate3d(0, 50px, 0);
	}

	100% {
		opacity 1
		transform: scale3d(1, 1, 1) translate3d(0, 0px, 0);
	}
}

@keyframes popupOverlayOpen {
	0% {
		background rgba(cl1,0)
	}
	100% {
		background rgba(cl1,.35)
	}
}

@keyframes zoomIn {
	0% {
		opacity 0
		transform: scale3d(.7, .7, .7) translate3d(0, 100px, 0);
	}
	100% {
		opacity 1
		transform: scale3d(1, 1, 1) translate3d(0, 0px, 0);
	}
}


// ангруляр анимация
.ng-animate
	transition none

.ng-animation
	transition .3s
	&.ng-hide-add
		opacity 1
	&.ng-hide-add-active
		opacity 0
	&.ng-hide-remove
		opacity 0
	&.ng-hide-remove-active
		opacity 1
