@keyframes dropShow {
	0% {
		visibility visible
		opacity 0
		transform perspective(600px) rotateX(-90deg)
	}
	100% {
		visibility visible
		opacity 1
		transform perspective(600px) rotateX(0deg)
	}
}
@keyframes dropHide {
	0% {
		opacity 1
		transform scale(1)
	}
	100% {
		opacity 0
		transform scale(0)
	}
}

@keyframes popupOpen {
	0% {
		opacity 0
		transform: scale3d(.8, .8, .8) translate3d(0, 50px, 0);
	}

	100% {
		opacity 1
		transform: scale3d(1, 1, 1) translate3d(0, 0px, 0);
	}
}

@keyframes popupOverlayOpen {
	0% {
		opacity 0
	}
	100% {
		opacity 1
	}
}

@keyframes zoomIn {
	0% {
		opacity 0
		transform: scale3d(.9, .9, .9) translate3d(0, 100px, 0);
	}
	100% {
		opacity 1
		transform: scale3d(1, 1, 1) translate3d(0, 0px, 0);
	}
}

@keyframes noticeOut {
  0 {
    transform: perspective(1500px);
  }

  20% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    opacity: 0;

  }

  100% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    opacity: 0;
    max-height: 0;
  }
}

@keyframes noticeIn {
  from {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 0;
  }

  20% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
  }

  55% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  70% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
     max-height: 300px;
  }

  85% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500px);
  }
}

@keyframes noticeIn2 {
  0% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 300px;
  }

  40% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  60% {
    transform: perspective(1500px) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500px) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500px);
  }
}




.notice_anim
	max-height 0
	transition 1s
	overflow hidden
	.notice_block
		visibility hidden

	&.notice_out
		animation-fill-mode both
		animation-duration 1s
		animation-name noticeOut
		backface-visibility visible !important
		// transition 1s
		// transition-delay .3s
		max-height 300px
		.notice_block
			visibility visible


	&.notice_in
		animation-fill-mode both
		// animation-delay .2s
		animation-duration 1s
		animation-name noticeIn
		backface-visibility visible !important
		// transition .7s
		max-height 300px
		.notice_block
			visibility visible


	&:nth-child(1)
		animation-duration 1s
		animation-name noticeIn2




// ангруляр анимация
.ng-animate
	transition none

.ng-animation
	transition .3s
	&.ng-hide-add
		opacity 1
	&.ng-hide-add-active
		opacity 0
	&.ng-hide-remove
		opacity 0
	&.ng-hide-remove-active
		opacity 1
