@import 'variables.styl'

@keyframes fadeIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes pageHide {
	0% {
		opacity 1
		visibility visible
	}

	99% {
		visibility visible
	}
	100% {
		opacity 0
		visibility hidden
		transform translateX(200rem)
	}

}

@keyframes pageOpen {
	0% {
		opacity: 0;
		transform translateX(200rem)
		visibility visible
	}
	100% {
		opacity: 1;
		transform translateX(0rem)
	}
}

@keyframes pageFullsize {
	0% {
		width 66%
	}
	100% {
		width 100%
		max-width 2000rem
	}
}
@keyframes pageNorsize {
	0% {
		top 40rem
		width 100%
	}
	100% {
		top 65rem
		width 66%
	}
}

@keyframes error-border-flash {
	0%{
		border-color rgba(cerror,0)
	}
	100% {
		border-color rgba(cerror,1)
	}
}

@keyframes writeNow {
	from {
		transform translateX(0) translateZ(0)
	}
	to {
		transform translateX(10rem) translateZ(0)
	}
}

