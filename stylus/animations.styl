@keyframes dropShow {
	0% {
		visibility visible
		opacity 0
		transform translateY(10rem)
	}
	100% {
		visibility visible
		opacity 1
		transform translateY(0rem)
	}
}
@keyframes dropHide {
	0% {
		visibility hidden
		opacity 1
		transform translateY(0rem)
	}
	100% {
		opacity 0
		transform translateY(10rem)
	}
}

@keyframes popupOpen {
	0% {
		opacity 0
		transform: scale(.95) translate3d(0, 30rem, 0);
	}

	100% {
		opacity 1
		transform: scale(1) translate3d(0, 0, 0);
	}
}

@keyframes popupOverlayOpen {
	0% {
		opacity 0
	}
	100% {
		opacity 1
	}
}

@keyframes zoomIn {
	0% {
		opacity 0
		transform: scale3d(.9, .9, .9) translate3d(0, 30rem, 0);
	}
	100% {
		opacity 1
		transform: scale3d(1, 1, 1) translate3d(0, 0rem, 0);
	}
}

@keyframes noticeOut {
  0 {
    transform: perspective(1500rem);
  }

  20% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, -20deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 90deg);
    opacity: 0;

  }

  100% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 90deg);
    opacity: 0;
    max-height: 0;
  }
}

@keyframes noticeIn {
  from {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 0;
  }

  20% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
  }

  55% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  70% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
     max-height: 300rem;
  }

  85% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500rem);
  }
}

@keyframes noticeIn2 {
  0% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 90deg);
    animation-timing-function: ease-in;
    opacity: 0;
    max-height: 300rem;
  }

  40% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, -20deg);
    animation-timing-function: ease-in;

  }

  60% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, 0deg);
    opacity: 1;
  }

  80% {
    transform: perspective(1500rem) rotate3d(1, 0, 0, -5deg);

  }

  100% {
    transform: perspective(1500rem);
  }
}


@keyframes heartFlash {
  0% {
    transform: scale(1);
    opacity 1;
    color #fff
  }

  30% {
    transform: scale(1.4);
    opacity 0.6
  }
  100% {
    transform: scale(1);
    opacity 1
  }

}

@keyframes shake {
  10%, 90% {
    transform: translate3d(-1rem, 0, 0);
  }

  20%, 80% {
    transform: translate3d(2rem, 0, 0);
  }

  30%, 50%, 70% {
    transform: translate3d(-4rem, 0, 0);
  }

  40%, 60% {
    transform: translate3d(4rem, 0, 0);
  }
}

@keyframes rotatingSms {
  0% {
    transform: rotate(0deg) scale(1);
  }
  50%{
  	transform: rotate(180deg) scale(0.9);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}

