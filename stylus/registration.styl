@charset "utf-8"

@import 'nib'
@import 'variables.styl'


html, body
	min-width 240px
	animation none
.reg
	background cbglight
	position absolute
	width 100%
	min-height 100%
	background radial-gradient(65% 100%, cbglight 45%, cbglight - 20% 100%)
	// background-size 115% auto, 100% 100%
	.wrap
		width 850rem
		margin 0 auto
		min-height 100vh
		box-sizing border-box
		padding-bottom 70rem
		padding-top calc((100vh - 830rem)/2)
		animation-name zoomIn
		animation-duration .5s
		animation-fill-mode backwards

		&.login
			width 420rem
			.reg_section
				height auto
		&.reg_admin
			width 700rem

	.reg_header
		padding 30rem 0
		.logo
			display block
			width 100%
			height 50rem
			background url(../images/logo.svg) no-repeat center 0
			background-size auto 100%
			text-indent -10000em
		.slogan
			display block
			text-align center
			color cl1
			font-size fzn + 6rem
			vertical-align -20rem
			margin 10rem 0 0
		.header_links
			position absolute
			right 0
			top 45rem
	.reg_section
		display table
		width 100%
		box-shadow 7rem 7rem 0 rgba(cl1,0.1)
		height 450rem
	.reg_side
		background cl1
		color #fff
		width 300rem
		padding 30rem 30rem
		box-sizing border-box
		height 100%
		display table-cell
		font-size fzn - 1rem
		vertical-align top
		.title
			font-weight 400
			margin 0 0 30rem
			font-size 20rem
		p
			margin 0 0 10rem
		.copyright
			position absolute
			bottom 20rem
			left 30rem
			right 30rem
			font-size fzn - 2rem
			color cl1+70%
			.phone
				font-size fzn + 2rem
				display block
				margin-top 4rem
	.reg_article
		background #fff
		display table-cell
		padding 30rem 50rem
		box-sizing border-box
		vertical-align top
		h1
			color ctext
		p
			margin 15rem 0
			&:first-of-type
				margin-top 0
		.copyright
			display none

		.wizard_steps
			margin-left -50rem
			margin-right -50rem

		.info_sms
			max-width 1000rem
			margin-left -50rem
			margin-right -50rem
			margin-bottom -30rem
			padding-left 50rem
			padding-right 50rem
			padding-bottom 30rem
	.login
		// animation-name zoomInUp
		// animation-duration 1s
		// animation-fill-mode both
		.reg_section
			box-shadow none
			min-height 0rem
		.reg_header
			padding 9vh 0 20rem
			text-align center
			.title
				margin 11vh 0 0
				font-size 22rem
				color ctextlight
				font-weight fwl
				text-transform uppercase

		.reg_article
			display block
			width 100%
			padding 44rem 50rem
			box-shadow 7rem 7rem 0 rgba(cl1,0.1)
			.info
				margin-left -50rem
				margin-right -50rem
				padding-left 50rem
				padding-right 50rem
			.info_sms
				margin-top 30rem
				margin-bottom -45rem
		.form
			margin 0

		.login_links
			padding 20rem 0 0
			text-align center
			a

				font-size fzn - 2rem
				display inline-block
				margin 0 10rem
				opacity .7
				&:hover
					color cl2
					opacity 1

	.share
		border-top 1rem solid cbd + 30%
		padding 20rem 0 0
		margin 30rem 0 0
		font-size fzn - 2rem
		color ctextlight
		.soc
			margin 20rem 0 0



	.not_found_company
		p
			color ctext

	.file_upload_list
		background cbglight
		margin 0 -30rem
		padding 20rem 30rem 5rem
		.file_upload_block
			.file_name
				display none

	.ogrn_status_success, .ogrn_status_error
		background-image url(../images/account_widget_status_success.svg)
		background-repeat no-repeat
		background-position 10rem 7rem
		padding-top 12rem
		padding-bottom 15rem
		padding-left 55rem

	.ogrn_status_error
		background-image url(../images/account_widget_status_error.svg)


	.search_company
		margin 25rem -50rem 0
		padding 20rem 50rem 0
		background linear-gradient(top, cbglight + 10%, #fff 100rem)
		border-top 1rem solid cbglight - 10%

		.search_company_title
			color cl2
			font-size fzn
			font-weight fwm
			margin 0 0 20rem
			&:before
				font-size 22rem
				vertical-align -6rem
				margin-right 5rem
		.search_company_edit_link
			display inline-block
			margin 0 0 20rem
			text-decoration none
			color ctextlight
			border-bottom 1rem dashed ctextlight
			font-size fzn - 1rem
		.form
			margin-bottom 30rem

	.reg_admin
		h3
			text-align center
			font-weight 300
			margin 0 0 40rem

	.reg_footer
		position absolute
		bottom 15rem
		width 100%
		margin 25rem 0 0
		font-size fzn - 4rem
		color ctextlight
		text-align center



@media screen and (max-width: 850px)
	body
		background #fff
	.reg
		background cbglight
		-webkit-text-size-adjust 100%

		.back_anim
			display none!important
		.wrap
			width 80%
			margin-bottom 0
			padding-top 0rem
			padding-bottom 15rem
			min-width 320rem
			min-height 0
			&.login
				width 80%
				.reg_header
					padding-top 15rem
					padding-bottom 15rem
					.title
						margin-top 30rem
				.reg_article
					padding 20rem
				.login_links
					background #fff
					padding 10rem 0 20rem
					a
						color clink
		.reg_header
			padding-top 15rem
			padding-bottom 15rem
			text-align center
			.logo
				width 100%
				background-size auto 100%
				background-position center
				height 12vw
				max-height 50rem
			.slogan
				font-size fzn + 2rem
				margin-top 10rem
			.header_links
				position relative
				text-align center
				top auto
				right auto
				margin-top 15rem

		.reg_section
			height auto
		.reg_section,
		.reg_side,
		.reg_article
			display block
			width 100%
		.reg_side
			padding 20rem
			.title
				margin-bottom 15rem
			.copyright
				display none
		.reg_article
			padding 20rem

			.wizard_steps
				margin-left -25rem
				margin-right -25rem
			.w80
				width 100%!important
			.col, .column
				float none
				margin 0
				width 100%
			input.column.half:first-child
				margin-bottom 15rem
			.form_buttons
				.button
					width 100%
				.button_clean
					width 100%
					margin 15rem 0 0!important
					text-align center
				.links
					margin 20rem 0 0
					display block
					a
						position relative
						display block
						text-align center
						margin 0 0 10rem
						color clink
			.copyright
				display block

			.info_sms
				margin-left -20rem
				margin-right -20rem
				padding-left 20rem
				padding-right 20rem
				margin-bottom -20rem
				padding-bottom 20rem

		.reg_footer
			display none

		.login
			.reg_article
				box-shadow none
				.info
					margin-left -20rem
					margin-right -20rem
					padding-left 20rem
					padding-right 20rem
				.info_sms
					padding-bottom 20rem
					margin-bottom -20rem

			.reg_section
				box-shadow 7rem 7rem 0 rgba(cl1,0.1)

		.search_company
			margin-left -20rem
			margin-right -20rem
			padding-left 20rem
			padding-right 20rem
			.switch_group
				label
					padding-left 10rem
					padding-right 10rem
					font-size 10rem
					font-weight fwm!important

	.popup_overlay
		position fixed
		transform translateZ(1rem)
	.popup_table
		position absolute
		display block
	.popup_cell
		padding 0
		display block
		position absolute
		width 100%
		height 100%
		overflow auto
		-webkit-overflow-scrolling touch
	.popup_layer
		min-height calc(100% - 20rem)
		box-sizing border-box
		width auto
		padding 40rem 20rem
		margin 10rem
		-webkit-text-size-adjust 100%


	.list_company
		.company_item_info
			.property_label
				text-align left
			.select_company
				opacity 1



@media screen and (max-width: 550px)
	.reg
		.wrap, .wrap.login
			width 90%
@media screen and (max-width: 440px)
	.reg
		.wrap, .wrap.login
			width 100%
			padding-bottom 0