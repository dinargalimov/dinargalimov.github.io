@charset "utf-8"

@import 'nib'
@import 'variables.styl'


html, body
	min-width 240px
	animation none
.reg
	background cbglight
	position absolute
	width 100%
	min-height 100%
	background radial-gradient(65% 100%, cbglight 45%, cbglight - 20% 100%)
	// background-size 115% auto, 100% 100%
	.wrap
		width 850px
		margin 0 auto 30px
		animation-name zoomIn
		animation-duration .5s
		animation-fill-mode both
		&.login
			width 420px
			.reg_section
				height auto
		&.reg_admin
			width 700px

	.reg_header
		padding 30px 0
		.logo
			display inline-block
			width 250px
			height 50px
			background url(../images/logo.svg) no-repeat 0 0
			background-size 100% auto
			text-indent -10000em
		.slogan
			display inline-block
			font-style italic
			vertical-align -20px
			margin-left 30px
		.header_links
			position absolute
			right 0
			top 45px
	.reg_section
		display table
		width 100%
		box-shadow 7px 7px 0 rgba(cl1,0.1)
		height 450px
	.reg_side
		background cl1
		color #fff
		width 300px
		padding 30px 30px
		box-sizing border-box
		height 100%
		display table-cell
		font-size fzn - 1px
		vertical-align top
		.title
			font-weight 400
			margin 0 0 30px
			font-size 20px
		p
			margin 0 0 10px
		.copyright
			position absolute
			bottom 40px
			left 30px
			right 30px
			font-size fzn - 4px
			color cl1+70%
	.reg_article
		background #fff
		display table-cell
		padding 30px 50px
		box-sizing border-box
		vertical-align top
		h1
			color ctext
		p
			margin 15px 0
			&:first-of-type
				margin-top 0
		.copyright
			display none

		.wizard_steps
			margin-left -50px
			margin-right -50px

	.login
		// animation-name zoomInUp
		// animation-duration 1s
		// animation-fill-mode both
		.reg_section
			box-shadow none
			min-height 0px
		.reg_header
			padding 9vh 0 20px
			text-align center
			.title
				margin 11vh 0 0
				font-size 22px
				color ctextlight
				font-weight 300
				text-transform uppercase

		.reg_article
			display block
			width 100%
			padding 44px 50px
			box-shadow 7px 7px 0 rgba(cl1,0.1)
			.info
				margin-left -50px
				margin-right -50px
				padding-left 50px
				padding-right 50px
			.info_sms
				margin-top 30px
				margin-bottom -45px
				.small_text
					font-size fzn - 4px
		.form
			margin 0

		.login_links
			padding 20px 0 0
			text-align center
			a

				font-size fzn - 2px
				display inline-block
				margin 0 10px
				opacity .7
				&:hover
					color cl2
					opacity 1

	.share
		border-top 1px solid cbd + 30%
		padding 20px 0 0
		margin 30px 0 0
		font-size fzn - 2px
		color ctextlight
		.soc
			margin 20px 0 0



	.not_found_company
		p
			color ctext

	.file_upload_list
		background cbglight
		margin 0 -30px
		padding 20px 30px 5px
		.file_upload_block
			.file_name
				display none

	.ogrn_status_success, .ogrn_status_error
		background-image url(../images/account_widget_status_success.svg)
		background-repeat no-repeat
		background-position 10px 7px
		padding-top 12px
		padding-bottom 15px
		padding-left 55px

	.ogrn_status_error
		background-image url(../images/account_widget_status_error.svg)


	.search_company
		margin 25px -30px 0
		padding 20px 30px 0
		background linear-gradient(top, cbglight + 10%, #fff 100px)
		border-top 1px solid cbglight - 10%

		.search_company_title
			text-transform uppercase
			color cl2
			font-size fzn
			font-weight 500
			margin 0 0 20px
			&:before
				font-size 22px
				vertical-align -6px
				margin-right 5px
		.search_company_edit_link
			display inline-block
			margin 0 0 20px
			text-decoration none
			color ctextlight
			border-bottom 1px dashed ctextlight
			font-size fzn - 1px
		.form
			margin-bottom 30px

	.reg_admin
		h3
			text-align center
			font-weight 300
			margin 0 0 40px


@media screen and (max-width: 760px)
	.reg
		background radial-gradient(65% 100%, cbglight 45%, cbglight - 20% 100%)
		-webkit-text-size-adjust 100%
		.wrap
			width 100%
			margin-bottom 0
			&.login
				width 100%
				.reg_header
					padding-top 15px
					padding-bottom 15px
					.title
						margin-top 30px
				.reg_article
					padding 20px
				.login_links
					background #fff
					padding 10px 0 20px
					a
						color clink
		.reg_header
			padding-top 15px
			padding-bottom 15px
			.logo
				width 100%
				background-size auto 100%
				background-position center
				height 13vw
				max-height 50px
			.header_links
				position relative
				text-align center
				top auto
				right auto
				margin-top 15px

		.reg_section
			height auto
		.reg_section, .reg_side, .reg_article
			display block
			width 100%
		.reg_side
			padding 20px
			.title
				margin-bottom 15px
			.copyright
				display none
		.reg_article
			padding 20px
			.w80
				width 100%!important
			.col, .column
				float none
				margin 0
				width 100%
			input.column.half:first-child
				margin-bottom 15px
			.form_buttons
				.button
					width 100%
				.links
					margin 20px 0 0
					display block
					a
						position relative
						display block
						text-align center
						margin 0 0 10px
						color clink
			.copyright
				display block

	.popup_overlay
		position fixed
		transform translateZ(1px)
	.popup_table
		position absolute
		display block
	.popup_cell
		padding 0
		display block
		position absolute
		width 100%
		height 100%
		overflow auto
		-webkit-overflow-scrolling touch
	.popup_layer
		min-height calc(100% - 20px)
		box-sizing border-box
		width auto
		padding 40px 20px
		margin 10px
		-webkit-text-size-adjust 100%