@charset "utf-8"

@import 'nib'
@import 'variables.styl'

brform = 2rem

html, body
	min-width 240px
	animation none


.reg_var2
	background cbglight
	position absolute
	width 100%
	min-height 100%
	background radial-gradient(65% 100%, cbglight 45%, cbglight - 20% 100%)
	// background-size 115% auto, 100% 100%

	.form_group
		margin-bottom 20rem

	input[type="text"],
	input[type="password"],
	input[type="search"],
	input[type="email"],
	input[type="tel"],
	input[type="time"],
	input[type="date"],
	input[type="number"],
	textarea
		border-radius brform
		box-shadow none
		height 46rem
		font-size fzn
	.phone_code
		position absolute
		color ctextlight
		height 46rem
		line-height 46rem
		padding 0 15rem
		border-right 1rem solid cbd
	.phone_number
		padding-left 60rem



	.ms-choice
		height 46rem
		border-radius brform
		font-size fzn
		box-shadow none



	.wrap
		width 544rem
		margin 0 auto
		min-height 100vh
		box-sizing border-box
		padding-bottom 70rem
		padding-top calc((100vh - 830rem)/2)
		animation-name zoomIn
		animation-duration .5s
		animation-fill-mode backwards

		&.login
			width 420rem
			.reg_section
				height auto
		&.reg_admin
			width 700rem

	.reg_header
		padding 25rem 0
		.logo
			display block
			width 100%
			height 43rem
			background url(../images/logo.svg) no-repeat center 0
			background-size auto 100%
			text-indent -10000em
		.slogan
			display block
			text-align center
			color cl1
			font-size fzn + 2rem
			margin 12rem 0 0
		.header_links
			position absolute
			right 0
			top 45rem
	.reg_section
		width 100%
		box-shadow 4rem 4rem 0 rgba(cl1,0.06)


	.reg_article
		background #fff
		padding 30rem 50rem
		box-sizing border-box
		vertical-align top
		h1
			color ctext
		p
			margin 15rem 0
			&:first-of-type
				margin-top 0
		.col.half
			width 47.5%
			margin-left 5%
			&:first-child
				margin-left 0
		.reg_text_block
			padding 15rem 50rem
			margin 0 -50rem 25rem
			background cbgsky
			text-align center
			font-size fzn - 2rem
			line-height 1.4
		.copyright
			display none

		.wizard_steps
			margin-left -50rem
			margin-right -50rem
			margin-bottom 20rem
			.label
				margin-bottom 4rem
			.active, .done
				.label
					margin-bottom 0


		.info_sms
			max-width 1000rem
			margin-left -50rem
			margin-right -50rem
			margin-bottom -30rem
			padding-left 50rem
			padding-right 50rem
			padding-bottom 30rem
		.sms_confirm
			margin 0 -50rem -30rem
		.form_buttons
			text-align center

		.field_reg_ogrn
			width 100%
			margin-left auto
			margin-right auto
			input
				font-size fzn + 2rem

		.loading
			margin 30rem 0


	.login
		// animation-name zoomInUp
		// animation-duration 1s
		// animation-fill-mode both
		.reg_section
			box-shadow none
			min-height 0rem
		.reg_header
			padding 9vh 0 20rem
			text-align center
			.title
				margin 11vh 0 0
				font-size 22rem
				color ctextlight
				font-weight fwl
				text-transform uppercase

		.reg_article
			display block
			width 100%
			padding 44rem 50rem
			box-shadow 7rem 7rem 0 rgba(cl1,0.1)
			.info
				margin-left -50rem
				margin-right -50rem
				padding-left 50rem
				padding-right 50rem
			.info_sms
				margin-top 30rem
				margin-bottom -45rem
		.form
			margin 0

		.login_links
			padding 20rem 0 0
			text-align center
			a

				font-size fzn - 2rem
				display inline-block
				margin 0 10rem
				opacity .7
				&:hover
					color cl2
					opacity 1

	.share
		border-top 1rem solid cbd + 30%
		padding 20rem 0 0
		margin 30rem 0 0
		font-size fzn - 2rem
		color ctextlight
		.soc
			margin 20rem 0 0



	.not_found_company
		p
			color ctext

	.file_upload_list
		background cbgsky
		margin 0 -50rem
		padding 20rem 50rem 5rem
		.file_upload_block
			.file_name
				display none
	.docs_block
		.file_upload_list
			background none
			margin 0
			padding 0
			.col.half:nth-child(2n+1)
				margin-left 0

	.ogrn_status_success, .ogrn_status_error
		background-image url(../images/account_widget_status_success.svg)
		background-repeat no-repeat
		background-position 10rem 7rem
		padding-top 12rem
		padding-bottom 15rem
		padding-left 55rem

	.ogrn_status_error
		background-image url(../images/account_widget_status_error.svg)


	.search_company


		.search_company_title
			color ctext
			font-size fzn
			margin 0 -50rem 20rem
			background cbgsky
			padding 15rem 50rem
			text-align center

			&:before
				font-size 22rem
				vertical-align -6rem
				margin-right 5rem

		.search_company_edit_link
			display inline-block
			margin 0 0 15rem
			text-decoration none
			color clink
			border-bottom 1rem dashed clink
			font-size fzn - 1rem
			&:hover
				color cl2
				border-bottom-color cl2

		.switch_group label
			font-size 14rem
	.reg_admin
		h3
			text-align center
			font-weight 300
			margin 0 0 40rem

	.reg_footer
		position absolute
		bottom 15rem
		width 100%
		margin 25rem 0 0
		font-size fzn - 4rem
		color ctextlight
		text-align center


	.show_mobile
		display none

@media screen and (max-width: 850px)
	body
		background #fff
	.reg_var2
		background cbglight
		-webkit-text-size-adjust 100%


		.back_anim
			display none!important
		.wrap
			width 80%
			margin-bottom 0
			padding-top 0rem
			padding-bottom 15rem
			min-width 320rem
			min-height 0
			&.login
				width 80%
				.reg_header
					padding-top 15rem
					padding-bottom 15rem
					.title
						margin-top 30rem
				.reg_article
					padding 20rem
				.login_links
					background #fff
					padding 10rem 0 20rem
					a
						color clink
		.reg_header
			padding-top 15rem
			padding-bottom 15rem
			text-align center
			.logo
				width 100%
				background-size auto 100%
				background-position center
				height 12vw
				max-height 50rem
			.slogan
				font-size fzn + 2rem
				margin-top 10rem
			.header_links
				position relative
				text-align center
				top auto
				right auto
				margin-top 15rem

		.reg_section
			height auto
			box-shadow none
		.reg_section,
		.reg_side,
		.reg_article
			display block
			width 100%
		.reg_side
			padding 20rem
			.title
				margin-bottom 15rem
			.copyright
				display none
		.reg_article
			padding 20rem

			.reg_text_block, .search_company_title
				margin-left -20rem
				margin-right -20rem
				padding-left 20rem
				padding-right 20rem
			.wizard_steps
				margin-left -20rem
				margin-right -20rem
			.sms_confirm
				margin-left -20rem
				margin-right -20rem
			.w80
				width 100%!important
			// .col, .column
			// 	float none
			// 	margin-left 0
			// 	width 100%
			input.column.half:first-child
				margin-bottom 15rem
			.form_buttons
				.button
					width 100%
					padding-right 5rem
					padding-left 5rem
				.button_clean
					width 100%
					margin 15rem 0 0!important
					text-align center
				.links
					margin 20rem 0 0
					display block
					a
						position relative
						display block
						text-align center
						margin 0 0 10rem
						color clink
			.copyright
				display block

			.info_sms
				margin-left -20rem
				margin-right -20rem
				padding-left 20rem
				padding-right 20rem
				margin-bottom -20rem
				padding-bottom 20rem
		.file_upload_list
			margin-left -20rem
			margin-right -20rem
			padding-left 20rem
			padding-right 20rem
		.reg_footer
			display none

		.login
			.reg_article
				box-shadow none
				.info
					margin-left -20rem
					margin-right -20rem
					padding-left 20rem
					padding-right 20rem
				.info_sms
					padding-bottom 20rem
					margin-bottom -20rem

			.reg_section
				box-shadow 7rem 7rem 0 rgba(cl1,0.1)

		.search_company
			margin-left -20rem
			margin-right -20rem
			padding-left 20rem
			padding-right 20rem



	.list_company
		.company_item_info
			.property_label
				text-align left
			.select_company
				opacity 1

	.popup_overlay
		position fixed
		transform translateZ(1rem)
	.popup_table
		position absolute
		display block
	.popup_cell
		padding 0
		display block
		position absolute
		width 100%
		height 100%
		overflow auto
		-webkit-overflow-scrolling touch
	.popup_layer
		min-height calc(100% - 20rem)
		box-sizing border-box
		width auto
		padding 40rem 20rem
		margin 10rem
		-webkit-text-size-adjust 100%




@media screen and (max-width: 550px)
	.reg_var2
		.wrap, .wrap.login
			width 90%
		.reg_article
			.col.half
				width 100%
				margin-left 0
		.found_company
			background-image none
			padding-left 20rem
		.info_error
			margin-left -20rem
			margin-right -20rem
			padding-left 20rem
			padding-right 20rem



@media screen and (max-width: 440px)
	.reg_var2
		.wrap, .wrap.login
			width 100%
			padding-bottom 0
		.reg_article
			.col.half
				width 100%
				margin-left 0
@media screen and (max-width: 700px)
	.reg_var2
		.search_company
			.switch_group
				.show_mobile
					display block
				.hide_mobile
					display none
	.popup_layer
		.button
			width 100%
		.button_clean
			margin 20rem 0 0
			width 100%
			text-align center