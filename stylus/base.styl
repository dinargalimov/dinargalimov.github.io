// загрузка
.loading
	margin 50px auto
	display block
	text-align center
	div
		display inline-block
		background url(../images/loading.gif) no-repeat center 0
		background-size 24px 24px
		padding 35px 0 0
		min-height 24px
		min-width 24px
		max-width 300px
		color ctextlight


.loading_block
	transition .4s
	position relative
	&[data-loading-text]
		&:after
			background-position center calc(50% - 12px)
	&:before
		content ' 'attr(data-loading-text)' '
		position absolute
		top 50%
		left 50%
		z-index 11
		transform translate(-50%, 10px)
		text-transform uppercase
		font-size fzn - 5px
		font-weight 500
		color ctextlight
		text-shadow 0 0 7px #fff, 0 0 7px #fff, 0 0 7px #fff, 0 0 7px #fff

	&:after
		transition .5s background-color
		content ''
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-color rgba(#fff,0.6)
		background-image url(../images/loading.gif)
		background-repeat no-repeat
		background-position center
		background-size 24px 24px
		z-index 10

.loading_block_clean
	overflow hidden!important
	background-color transparent
	background-image url(../images/loading.gif)
	background-repeat no-repeat
	background-position center
	background-size 24px 24px
	& *
		opacity 0


.disable_block
	transition .4s
	position relative
	> *
		opacity .4

	&:after
		transition .5s background-color
		content ''
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 10




