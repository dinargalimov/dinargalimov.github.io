@import 'variables.styl'

.contragents_widgets, .top_area_widgets
	display flex
	&.choosed
		.top_area_widget_item, .contragents_widget_money
			transform scale(.9)
			&:hover
				transform scale(1)
	clearfix()
	.top_area_widget_item, .contragents_widget_money
		padding 0
		margin 0
		display flex
		justify-content flex-start
		cursor pointer
		transition .2s
		box-sizing border-box
		transform scale(1)
		margin 0 2% 0 0
		background-size auto 70%
		background-repeat no-repeat
		background-position center
		max-width 48%
		&[class*="soon"]
			pointer-events none
			cursor default
			&:hover
				transform none
		// @media (min-width:600rem) and (max-width:1170rem)
		// 	width 32.33%
		// 	&:nth-child(3n)
		// 		margin-right 0
		// 	&.soon2
		// 		display none

		// @media (min-width:1170rem) and (max-width:1400rem)
		// 	width 23.875%
		// 	&:nth-child(4n)
		// 		margin-right 0
		// @media (min-width:1400rem) and (max-width:1700rem)
		// 	width 18.8%
		// 	&:nth-child(5n)
		// 		margin-right 0
		// @media (min-width:1700rem)
		// 	width 15.46%
		// 	&:nth-child(6n)
		// 		margin-right 0

		&:hover
			transform translateY(-3rem)
			box-shadow 0rem 2rem 3rem 0rem rgba(0,0,0,0.12)
			.desc
				.name:after
					opacity .8

		// активный счет
		&.active
			transform scale(1)

			.desc
				color #fff
				background cl3
				border-right-color transparent
				&:before
					display none
				&:after
					top 100%
					left 50%
					border solid transparent
					content " "
					height 0
					width 0
					position absolute
					pointer-events none
					border-color rgba(255, 255, 255, 0)
					border-top-color cl3
					border-width 8rem
					margin-left -8rem
					margin-top 0

				.num, .num:hover
					color #fff
				.name
					&:after
						background-color #fff!important

		&.paid, &.month
			.desc
				.name:after
					background-color cl3
			&.active
				.desc
					background cl3

		&.payable, &.year

			.desc
				.name:after
					background-color ctextwarning
			&.active
				.desc
					background ctextwarning - 3%
					&:after
						border-top-color ctextwarning - 3%

		.desc
			padding 15rem 35rem
			font-size fzn - 2rem
			display flex
			flex-direction column
			justify-content center
			border-right 1rem solid cbdlight


			&:after, &:before
				left 100%
				top 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none

			&:after
				border-color rgba(255, 255, 255, 0)
				border-left-color #fff
				border-width 6rem
				margin-top -6rem
			&:before
				border-color rgba(cbdlight, 0)
				border-left-color cbdlight
				border-width 7rem
				margin-top -7rem


			.name
				text-transform uppercase
				padding-bottom 7rem
				margin-bottom 7rem
				font-weight normal
				&:after
					content ''
					display block
					position absolute
					left 0
					bottom 0
					height 3rem
					width 100%
					background cl3
					opacity .5
					transition .2s
			.num
				color ctextlight
				font-size fzn - 4rem

		.values
			display flex
			flex-direction column
			justify-content center
			align-items center
			padding 10rem 35rem
		.value_item
			padding 0 40rem 0 0
			&:last-child
				padding-right 0
		.subtitle
			font-size fzn - 2rem
			color ctextlight
		.value
			font-size fzn + 2rem
			padding 2rem 0 4rem
			&:last-child
				border-right none

.payroll_widgets
	.payroll_widget_money
		.values
			flex-direction row