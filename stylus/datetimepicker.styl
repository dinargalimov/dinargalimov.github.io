@import 'nib'
@import 'variables.styl'

.xdsoft_datetimepicker
	background #fff
	box-shadow 0rem 2rem 6rem rgba(0,0,0,0.1)
	border 1rem solid rgba(0,0,0,0.1)
	padding 12rem
	position absolute
	z-index 2650
	box-sizing border-box
	display none
	animation dropShow .1s
	transform-origin top
	animation-timing-function cubic-bezier(0.1, 0.8, 0.9, 1.0)
	margin-top 5rem
	iframe
		position absolute
		left 0
		top 0
		width 75rem
		height 210rem
		background transparent
		border none
	button
		border none !important
	&.xdsoft_inline
		display inline-block
		position static
		box-shadow none
	*
		-moz-box-sizing border-box
		box-sizing border-box
		padding 0
		margin 0
	.xdsoft_datepicker
		width 230rem
		float left
		&.active
			& + .xdsoft_timepicker
				margin-top 8rem
				margin-bottom 3rem
	&.xdsoft_showweeks
		.xdsoft_datepicker
			width 256rem
	.xdsoft_timepicker
		width 58rem
		float left
		text-align center
		margin-left 8rem
		margin-top 0
		.xdsoft_prev
			background-position -40rem 0
			margin-bottom 7rem
			margin-top 0
		.xdsoft_time_box
			height 151rem
			overflow hidden
			border-bottom 1rem solid #ddd
			& > div
				& > div
					background #f5f5f5
					border-top 1rem solid #ddd
					color #666
					font-size 12rem
					text-align center
					border-collapse collapse
					cursor pointer
					border-bottom-width 0
					height 25rem
					line-height 25rem
					&:first-child
						border-top-width 0
	.xdsoft_mounthpicker
		position relative
		text-align center
	.xdsoft_label
		display inline
		position relative
		z-index 9999
		margin 0
		padding 5rem 3rem
		font-size 14rem
		line-height 20rem
		font-weight bold
		background-color #fff
		float left
		width 182rem
		text-align center
		cursor pointer
		i
			opacity 0.5
			background-position -92rem -19rem
			display inline-block
			width 9rem
			height 20rem
			vertical-align middle
			display none
		&:hover
			& > span
				text-decoration underline
			i
				opacity 1.0
		& > .xdsoft_select
			box-shadow 0 3rem 15rem rgba(0,0,0,0.2)
			position absolute
			right 0
			top 30rem
			z-index 101
			display none
			background #fff
			max-height 180rem
			overflow-y hidden
			&.xdsoft_monthselect
				right 0rem
			&.xdsoft_yearselect
				right 2rem
			& > div
				& > .xdsoft_option
					padding 4rem 15rem 4rem 5rem
					text-decoration none !important
					font-weight 300
					&:hover
						color #fff
						background #ff8000
					&.xdsoft_current
						background cl2
						color #fff
						font-weight 700
	.xdsoft_prev
		float left
		&:before
			font-family 'mb-icon-font-3'
			content 'd'
			font-size fzn
	.xdsoft_today_button
		float left
		margin-left 10rem
		font-size fzn - 2rem
		&:before
			font-family 'mb-icon-font-3'
			content 'M'
	.xdsoft_next
		float right
		&:before
			font-family 'mb-icon-font-3'
			content 'Q'
			font-size fzn
	.xdsoft_month
		width 80rem
		margin-left 10rem
		text-align right
	.xdsoft_calendar
		clear both
		table
			border-collapse collapse
			width 100%

		td, th
			width 14.2857142%
			background none
			border none
			color ctext
			font-size fzn - 3rem
			text-align center
			vertical-align middle
			padding 0
			border-collapse collapse
			cursor pointer
			height 30rem

		td
			border-radius 3rem

			&.xdsoft_today
				color cl2
				font-weight fwm
			&.xdsoft_highlighted_default
				background #ffe9d2
				box-shadow #ffb871 0 1rem 4rem 0 inset
				color #000
			&.xdsoft_highlighted_mint
				background #c1ffc9
				box-shadow #00dd1c 0 1rem 4rem 0 inset
				color #000
			&.xdsoft_other_month
				&.xdsoft_disabled
					opacity 0.2
		th
			height 40rem
			font-weight 700
			text-align center
			color ctext
			cursor default
			border-top 2rem solid cl2
	.xdsoft_year
		width 48rem
	.xdsoft_copyright
		color #ccc !important
		font-size 10rem
		clear both
		float none
		margin-left 8rem
		a
			color #eee !important
			&:hover
				color #aaa !important

	.xdsoft_save_selected
		display block
		border 1rem solid #dddddd !important
		margin-top 5rem
		width 100%
		color #454551
		font-size 13rem
	.blue-gradient-button
		font-family "museo-sans", "Book Antiqua", sans-serif
		font-size 12rem
		font-weight 300
		color #82878c
		height 28rem
		position relative
		padding 4rem 17rem 4rem 33rem
		border 1rem solid #d7d8da
		background linear-gradient(to bottom, #fff 0%, #f4f8fa 73%)
.xdsoft_noselect
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	-o-user-select none
	user-select none
	&::selection
		background transparent
	&::-moz-selection
		background transparent
.xdsoft_datetimepicker .xdsoft_datepicker, .xdsoft_datetimepicker .xdsoft_timepicker
	display none
.xdsoft_datetimepicker .xdsoft_datepicker.active, .xdsoft_datetimepicker .xdsoft_timepicker.active
	display block
.xdsoft_datetimepicker .xdsoft_label i,
.xdsoft_datetimepicker .xdsoft_prev,
.xdsoft_datetimepicker .xdsoft_next,
.xdsoft_datetimepicker .xdsoft_today_button
	background-image none
.xdsoft_datetimepicker .xdsoft_next,
.xdsoft_datetimepicker .xdsoft_prev ,
.xdsoft_datetimepicker .xdsoft_today_button
	background-color transparent
	background-repeat no-repeat
	border 0 none
	cursor pointer
	display block
	height 30rem
	outline medium none
	overflow hidden
	padding 0
	position relative
	white-space nowrap
	width 20rem
	min-width 0
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_prev,
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_next
	float none
	height 15rem
	width 30rem
	display block
	margin-left 14rem
	margin-top 7rem
.xdsoft_datetimepicker .xdsoft_today_button:hover,
.xdsoft_datetimepicker .xdsoft_next:hover,
.xdsoft_datetimepicker .xdsoft_prev:hover
	color cl2


.xdsoft_datetimepicker.xdsoft_showweeks .xdsoft_calendar td,.xdsoft_datetimepicker.xdsoft_showweeks .xdsoft_calendar th
	width 12.5%
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_default,
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_current,
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_time_box >div >div.xdsoft_current
	background cl2
	color #fff
	font-weight 700
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_other_month,
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_disabled,
.xdsoft_datetimepicker .xdsoft_time_box >div >div.xdsoft_disabled
	opacity 0.5
	cursor default
.xdsoft_datetimepicker .xdsoft_calendar td:hover,
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_time_box >div >div:hover
	color #fff !important
	background #ff8000 !important
	box-shadow none !important
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_current.xdsoft_disabled:hover,
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_time_box>div>div.xdsoft_current.xdsoft_disabled:hover
	background #33aaff !important
	box-shadow #178fe5 0 1rem 3rem 0 inset !important
	color #fff !important
.xdsoft_datetimepicker .xdsoft_calendar td.xdsoft_disabled:hover,
.xdsoft_datetimepicker .xdsoft_timepicker .xdsoft_time_box >div >div.xdsoft_disabled:hover
	color inherit !important
	background inherit !important
	box-shadow inherit !important
.xdsoft_time_box
	position relative
	border 1rem solid #ccc
.xdsoft_scrollbar
	position absolute
	width 7rem
	right 0
	top 0
	bottom 0
	cursor pointer
	& > .xdsoft_scroller
		background-color rgba(0, 50, 100, 0.10)
		box-shadow inset -1rem -1rem 0rem rgba(0, 0, 0, 0.03), inset 1rem 1rem 0rem rgba(0, 0, 0, 0.03)
		height 20rem
		border-radius 3rem
.xdsoft_scroller_box
	position relative
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_label i,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_prev,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_next,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_today_button
	background-image none
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_calendar td,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_calendar th
	background #0a0a0a
	border 1rem solid #222
	color #999
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_calendar td.xdsoft_default,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_calendar td.xdsoft_current,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_timepicker .xdsoft_time_box >div >div.xdsoft_current
	background #cc5500
	box-shadow #b03e00 0 1rem 3rem 0 inset
	color #000
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_calendar td:hover,
.xdsoft_datetimepicker.xdsoft_dark .xdsoft_timepicker .xdsoft_time_box >div >div:hover
	color #000 !important
	background #007fff !important
.xdsoft_dark
	.xdsoft_time_box
		border 1rem solid #333
	.xdsoft_scrollbar
		& > .xdsoft_scroller
			background #333 !important
.xdsoft_datetimepicker .blue-gradient-button:hover, .xdsoft_datetimepicker .blue-gradient-button:focus, .xdsoft_datetimepicker .blue-gradient-button:hover span, .xdsoft_datetimepicker .blue-gradient-button:focus span
	color #454551

	background linear-gradient(to bottom, #f4f8fa 0%, #FFF 73%)
