@import 'variables.styl'

.jsRadSelect2
	display inline
// мультиселект
.ms-parent
	display inline-block
	max-width 100%
	vertical-align middle

.ms-choice-focusser
	opacity 0!important
	position absolute!important
	padding 0!important
	border none!important
	left -9999rem
	&:focus ~ .ms-choice
		border-color cl2
		box-shadow none
	&:focus.error ~ .ms-choice
		border-color cerror

.ms-choice
	display block
	width 100%
	max-width 100%
	height 44rem
	border 1rem solid cbd
	border-radius brform
	font-family ffn
	font-size fzn
	font-weight fwn
	padding 0 45rem 0 15rem
	box-sizing border-box
	color ctext
	text-decoration none
	background-color #fff
	background-image url(../images/select_arrow.svg)
	background-repeat no-repeat
	background-position calc(100% - 15rem) center
	cursor pointer
	box-shadow inset 0rem 2rem 2rem -2rem rgba(0,0,0,0.18)
	text-align left
	filter none

	&.disabled
		color ctextdis
		background-color #f5f5f5
		cursor default
		&:focuc
			border-color inherit
	&.open, &:focus
		border-color cl2
		box-shadow none
	> span
		overflow ellipsis
		display block
		max-width 100%
	.ms-choice-multi-item
		&:after
			content ', '
		&:last-child
			&:after
				display none
	div
		display none
	.placeholder
		color ctextholder
		font-weight 300
	&.error
		border-color cerror
		color ctexterror

	&.open
		& ~ .ms-drop
			// transform perspective(600rem) rotateX(0deg)
			// transition opacity .3s, transform .25s
			transform: translateY(0rem);
			opacity 1
			visibility visible
			transition transform 0.2s cubic-bezier(0.5, 0, 0, 1.25), opacity 0.15s ease-out, visibility 0s 0s
.ms-choice-input
	background-image none
	cursor text


.ms-drop
	display block!important
	position absolute
	z-index 1600
	background #fff
	box-shadow 0rem 4rem 16rem rgba(0,30,60,0.2)
	// border 1rem solid rgba(0,0,0,0.1)
	min-width 100%
	color ctextlight
	display none
	box-sizing border-box
	padding-right 20rem
	max-width 350rem
	overflow auto
	margin-right -1000rem
	visibility hidden
	-webkit-overflow-scrolling touch
	opacity 0
	transform-origin top
	// transform perspective(600rem) rotateX(-90deg)
	// transition opacity .3s, transform 1.5s, visibility 0s .3s
	transform translateY(7rem)
	transition transform 0.2s cubic-bezier(0.5, 0, 0, 1.25), opacity 0.15s ease-out, visibility 0s 0.2s

	&.bottom
		bottom 100%
		transform-origin bottom
		transform translateY(-7rem)
	&.right
		right 0
		margin-right 0
		margin-left -1000em
	.ms-drop-inner
		width calc(100% + 20rem)
		max-height 214rem
		-webkit-overflow-scrolling touch
		overflow auto

	.loading
		width 150rem

	ul
		max-height 100% !important
		li
			border-bottom 1rem solid cbdlight + 40%

			&:last-child
				border-bottom none

			label, .label_check
				display block
				padding 10rem 15rem
				cursor pointer
				box-sizing border-box
				font-size fzn
				color ctext
				>span
					display inline-block
					vertical-align top
					line-height 1.35
					// overflow ellipsis
					max-width calc(100% - 32rem)

				.select_item_info
					padding 3rem 0 0
					font-size fzn - 4rem
					display block
					color ctextlight

			input[type='radio']
				& + .label_check
					.icon
						display none
					>span
						margin-left 0
						max-width 100%
						display block


			.select_item_info
				font-size fzn - 4rem
				display block



			&.selected
				label, .label_check
					color #fff
					background-color cl2
					span
						color #fff
			&:hover, &.highlight
				background cbghighlight
				// label, .label_check
				// 	color cl2


	.ms-no-results, .ms-choice-no-result
		padding 12rem 25rem 12rem 15rem
		font-size fzn - 2rem
		color ctextdis
		text-align center

	.ms-group-title
		font-size fzn - 4rem
		font-weight fwm
		color ctextlight
		color cl2
		font-style italic
		margin 15rem 15rem 4rem

@media (-webkit-min-device-pixel-ratio:0)
	.ms-drop
		padding-right 0
		overflow overlay
		.ms-drop-inner
			width 100%
			overflow overlay



.ms-search
	border-bottom 1rem solid cbd
	input
		border none
		width 100%
		background url(../images/icon_search_input.svg) no-repeat 10rem center
		background-size 16rem auto
		padding-left 34rem
		box-shadow none!important
		font-size fzn - 1rem





.ms-parent
	&.select_inline
		vertical-align bottom
		.ms-choice
			height auto
			line-height 1.2
			border none
			padding 0
			color clink
			background none
			box-shadow none
			transition .1s
			>span
				border-bottom 1rem dashed clink
				color clink

			&:hover
				>span
					color cl2
					border-bottom-color cl2
				.placeholder
					color cl2
			.placeholder
				color clink
				font-weight normal

		.ms-drop
			min-width 0
			top calc(100% + 5rem)
			&.bottom
				top auto
				bottom calc(100% + 10rem)

	&.select_pos_right
		.ms-drop
			right 0
			margin-right 0
			margin-left -1000em

	&.select_full
		width 100%
		.ms-choice
			width auto
		.ms-drop
			max-width 100%
			li
				label
					>span
						white-space normal
						word-wrap break-word
	&.select_pos_left
		.ms-drop
			right calc(100% + 10rem)
			top 0


	// в колонку
	&.select_multi_column
		&.select_inline
			.ms-choice
				>span:not(.placeholder)
					border-bottom none
				&:hover
					>span:not(.placeholder)
						color clink

				.ms-choice-multi-item:hover
					span
						color cl2
						border-bottom-color cl2

		.ms-choice-multi-item
			display block
			margin 0 0 2rem
			&:after
				display none
			span
				display inline-block
				border-bottom 1rem dashed clink
				max-width 100%
				overflow ellipsis

	&.drop_item_wrap, &.ws_n
		label, .label_check
			>span
				white-space normal

	&.choise_wrap
		.ms-choice
			&>span
				white-space normal
				display inline
				line-height 1.5
