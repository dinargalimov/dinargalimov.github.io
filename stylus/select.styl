@import 'variables.styl'
// мультиселект
.ms-parent
	display inline-block
	max-width 100%
	vertical-align middle

.ms-choice
	display block
	width 100%
	max-width 100%
	height 40px
	border 1px solid cbd
	border-radius brform
	font-family ffn
	font-size fzn - 1px
	font-weight 300
	padding 0 45px 0 15px
	box-sizing border-box
	color ctext
	text-decoration none
	background-color #fff
	background-image url(../images/select_arrow.svg)
	background-repeat no-repeat
	background-position calc(100% - 15px) center
	cursor pointer
	box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0.18)
	text-align left
	filter none

	&.disabled
		color ctextdis
		background #f5f5f5
		cursor default
	&.open, &:focus
		border-color cl2
		box-shadow none
	> span
		overflow ellipsis
		display block
		max-width 100%
	.ms-choice-multi-item
		&:after
			content ','
		&:last-child
			&:after
				display none
	div
		display none
	.placeholder
		color ctextholder
	&.error
		border-color cerror
		color ctexterror

	&.open
		& + .ms-drop
			animation dropShow .1s
			transform-origin top
			animation-timing-function cubic-bezier(0.1, 0.8, 0.9, 1.0)
		& + .ms-drop.bottom
			transform-origin bottom


.ms-drop
	position absolute
	z-index 1000
	background #fff
	box-shadow 0px 1px 3px rgba(0,0,0,0.1)
	border 1px solid rgba(0,0,0,0.1)
	min-width 100%
	color ctextlight
	display none
	max-width 300px
	box-sizing border-box

	&.bottom
		bottom 100%
	&.right
		right 0
	ul
		overflow auto
		-webkit-overflow-scrolling touch
		max-height 260px!important
		li
			white-space nowrap
			&:after
				display block
				content ''
				height 1px
				margin 0 15px
				background cbdlight
			&:last-child
				&:after
					display none
			label, .label_check
				display block
				padding 9px 25px 9px 15px
				cursor pointer
				white-space nowrap
				box-sizing border-box
				font-size fzn - 2px
				color clink
				>span
					display inline-block
					vertical-align top
					line-height 120%
					overflow ellipsis
					max-width calc(100% + 15px)

				.select_item_info
					padding 3px 0 0
					font-size fzn - 4px
					display block
					color ctextlight

			input[type='radio']
				& + .label_check
					.icon
						display none
					>span
						margin-left 0
			input[type='checkbox']
				& + .label_check
					>span
						max-width calc(100% - 14px - 7px)

			.select_item_info
				font-size fzn - 4px
				display block



			&.selected
				label, .label_check
					color cl2
					font-weight 400

			&:hover, &.highlight
				background cbghighlight
				// label, .label_check
				// 	color cl2


	.ms-no-results
		padding 12px 25px 12px 15px
		font-size fzn - 2px
		color ctextdis


.ms-search
	border-bottom 1px solid cbdlight
	input
		border none
		width 100%
		background url(../images/icon_search_input.svg) no-repeat 10px center
		background-size 16px auto
		padding-left 34px
		box-shadow none!important
		font-size fzn - 1px



.ms-parent
	&.select_inline
		vertical-align bottom
		.ms-choice
			height auto
			line-height 1.2
			border none
			padding 0
			color clink
			background none
			box-shadow none
			transition .1s
			>span
				border-bottom 1px dashed clink
				color clink

			&:hover
				>span
					color cl2
					border-bottom-color cl2
				.placeholder
					color cl2
			.placeholder
				color clink

		.ms-drop
			min-width 0
			top calc(100% + 5px)
			&.bottom
				top auto
				bottom calc(100% + 10px)

	&.select_pos_right
		.ms-drop
			right 0

	&.select_full
		width 100%
		.ms-choice
			width auto
		.ms-drop
			max-width 100%
			li
				label
					>span
						white-space normal
						word-wrap break-word
	&.select_pos_left
		.ms-drop
			right calc(100% + 10px)
			top 0


	// в колонку
	&.select_multi_column
		&.select_inline
			.ms-choice
				>span:not(.placeholder)
					border-bottom none
				&:hover
					>span:not(.placeholder)
						color clink

				.ms-choice-multi-item:hover
					span
						color cl2
						border-bottom-color cl2

		.ms-choice-multi-item
			display block
			margin 0 0 2px
			&:after
				display none
			span
				display inline-block
				border-bottom 1px dashed clink
				max-width 100%
				overflow ellipsis

	&.ws_n
		label, .label_check
			>span
				white-space normal




// --------------- ui-select -----------------

.ui-select-highlight
	font-weight bold
.ui-select-offscreen
	clip rect(0 0 0 0) !important
	width 1px !important
	height 1px !important
	border 0 !important
	margin 0 !important
	padding 0 !important
	overflow hidden !important
	position absolute !important
	outline 0 !important
	left 0px !important
	top 0px !important
.ng-dirty
	&.ng-invalid
		& > a
			&.select2-choice
				border-color #D44950
		& > div
			&.selectize-input
				border-color #D44950
.select2-result-single
	padding-left 0
.select2-locked
	& > .select2-search-choice-close
		display none
.select-locked
	& > .ui-select-match-close
		display none
.selectize-input
	&.selectize-focus
		border-color #007FBB !important
.selectize-control
	& > .selectize-input
		& > input
			width 100%
	& > .selectize-dropdown
		width 100%
.btn-default-focus
	color #333
	background-color #EBEBEB
	border-color #ADADAD
	text-decoration none
	outline 5px auto -webkit-focus-ring-color
	outline-offset -2px
	box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6)
.ui-select-bootstrap
	.ui-select-toggle
		position relative
		& > .caret
			position absolute
			height 10px
			top 50%
			right 10px
			margin-top -2px
	& > .ui-select-match
		text-align left
		& > .caret
			position absolute
			top 45%
			right 15px
	& > .ui-select-choices
		width 100%
		height auto
		max-height 200px
		overflow-x hidden
		margin-top -1px
	.ui-select-choices-row
		& > a
			display block
			padding 3px 20px
			clear both
			font-weight 400
			line-height 1.42857143
			color #333
			white-space nowrap
		&.active
			& > a
				color #fff
				text-decoration none
				outline 0
				background-color #428bca
	&.ng-dirty
		&.ng-invalid
			& > button
				&.btn
					&.ui-select-match
						border-color #D44950
.input-group
	& > .ui-select-bootstrap
		&.dropdown
			position static
		& > input
			&.ui-select-search
				&.form-control
					border-radius 4px
					border-top-right-radius 0
					border-bottom-right-radius 0
.ui-select-multiple
	&.ui-select-bootstrap
		height auto
		padding 3px 3px 0 3px
		input
			&.ui-select-search
				background-color transparent !important
				border none
				outline none
				height 1.666666em
				margin-bottom 3px
		.ui-select-match
			.close
				font-size 1.6em
				line-height 0.75
		.ui-select-match-item
			outline 0
			margin 0 3px 3px 0
	.ui-select-match-item
		position relative
		&.dropping-before
			&:before
				content ""
				position absolute
				top 0
				right 100%
				height 100%
				margin-right 2px
				border-left 1px solid #428bca
		&.dropping-after
			&:after
				content ""
				position absolute
				top 0
				left 100%
				height 100%
				margin-left 2px
				border-right 1px solid #428bca
.ui-select-bootstrap .ui-select-choices-row>a:hover, .ui-select-bootstrap .ui-select-choices-row>a:focus
	text-decoration none
	color #262626
	background-color #f5f5f5
.ui-select-bootstrap .ui-select-choices-row.disabled>a,
.ui-select-bootstrap .ui-select-choices-row.active.disabled>a
	color #777
	cursor not-allowed
	background-color #fff
.ui-select-match.ng-hide-add,
.ui-select-search.ng-hide-add
	display none !important


// ------------- select2 -----------------

.select2
	display inline-block
	vertical-align middle
	&.error
		.select2-choice
			color cerror
			animation error-border-flash .5s both
.select2-container
	position relative

	.select2-choice
		display block
		height 40px
		line-height 38px
		border 1px solid cbd
		border-radius brform
		font-family ffn
		font-size fzn
		font-weight 300
		padding 0 40px 0 15px
		box-sizing border-box
		color ctext
		text-decoration none
		background-color #fff
		background-image url(../images/select_arrow.svg)
		background-repeat no-repeat
		background-position calc(100% - 15px) center
		cursor pointer
		box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0.18)
		&.select2-default
			color ctextdis

	&.select2-container-disabled
		.select2-choice
			color ctextdis
			background #f5f5f5
			cursor default
	.select2-drop
		position absolute
		z-index 1000
		top 100%
		background #fff
		box-shadow 0 5px 25px rgba(0,0,0,0.2)
		min-width 100%
		color ctextlight

	.ui-select-choices-row
		border-bottom 1px solid cbdlight
		margin 0 10px
		&:last-child
			border-bottom none
			.ui-select-choices-row-inner
				padding-bottom 15px
		&:first-child
			.ui-select-choices-row-inner
				padding-top 15px

	.ui-select-choices-row-inner
		padding 8px 25px 8px 0px
		cursor pointer
		white-space nowrap
		box-sizing border-box
		font-size fzn - 2px
	.select2-highlighted
		color cl2
	.select2-display-none
		display none!important

	.select2-search
		border-bottom 1px solid cbdlight
		input
			border none
			width 100%
			background url(../images/icon_search_input.svg) no-repeat 10px center
			background-size 16px auto
			padding-left 34px
			box-shadow none!important
			font-size fzn - 1px

	.select2-results
		max-height 186px
		overflow-x hidden
		overflow-y auto
		-webkit-overflow-scrolling touch

	&.select2-nosearch
		.select2-search
			height 0
			overflow hidden


.select2-dropdown-open, .select2-container-active
	.select2-choice
		border-color cl2


.select2-inline
	vertical-align top
	.select2-choice
		display inline-block
		height auto
		line-height normal
		padding 0
		border none
		background none
		color cl2
		border-bottom 1px dashed cl2
		box-shadow none
		&.select2-default
			color cl2
	.select2-drop
		top calc(100% + 5px)

.select2-autocomplete
	width 200px
	.select2-choice
		background-image none
		width 100%
		white-space nowrap
		padding-right 15px
	.select2-drop
		position relative
		display inline-block
		box-shadow none
		width 100%
	.select2-search
		border none
		width 100%
		input
			border 1px solid cbd
			background-image none
			padding-right 15px
			padding-left 15px

			&:focus
				border-color cl2

	.ui-select-choices
		position absolute
		z-index 1000
		width 100%
		top 100%
		background #fff
		box-shadow 0 10px 25px rgba(0,0,0,0.2)
		min-width 100%
		min-width 120px
		color ctextlight