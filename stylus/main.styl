		// 		display block


	.header_profile_name

		text-transform uppercase
		padding 0 15rem
		font-weight 400
		max-width 250rem
		line-height 60rem
		color clinklight
		a
			width auto
			overflow ellipsis
			max-width 100%
			font-weight fwr
			font-size fzn - 2rem
			&:before
				font-size 17rem
				vertical-align -3rem
				margin 0 10rem 0 0


// выпадушка выбора компании
.drop_profile
	.drop-content
		&:after, &:before
			bottom 100%
			left 50rem
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none
		&:after
			border-color rgba(255, 255, 255, 0)
			border-bottom-color #fff
			border-width 8rem
			margin-left -8rem
		&:before
			border-color rgba(0, 0, 0, 0)
			border-bottom-color rgba(0,0,0,0.1)
			border-width 9rem
			margin-left -9rem


// окно реферральной акции
.drop.drop_referral
	right 25rem!important
	left auto!important
	transform translateX(0) translateY(60rem)!important
	.drop-content
		&:after
			bottom 100%
			right 77rem
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none
			border-color rgba(136, 183, 213, 0)
			border-bottom-color cbginfo
			border-width 8rem
	.drop-content-inner
		max-width 300rem
		max-height 500rem!important
		padding 20rem 25rem
		box-sizing border-box
	.drop_referral_quote
		background cbginfo
		margin -20rem -25rem 20rem
		padding 20rem 25rem
		.img
			float left
			display inline-block
			width 45rem
			height 45rem
			border-radius 50%
			margin 0 15rem 10rem 0
			overflow hidden
			img
				background #eee
				border none
		.text
			font-style italic
			font-size 13rem
			color ctextlight
	.drop_referral_banner
		color ctextlight
		overflow hidden
		margin 0 0 20rem
		.big
			font-size 46rem
			font-weight fwl
			float left
			line-height 40rem
			margin 0 5rem 0 10rem
		.light
			font-size 17.5rem
			font-weight fwl
			text-transform uppercase
		.mid
			font-size 14rem
			font-weight fwm
			text-transform uppercase
	.drop_referral_text
		font-size fzn - 3rem

// меню слева
.menu
	margin 10rem 0 0
	li
		margin 0 0 2rem
		box-sizing border-box

		&.active a
			border-color cl3
			background cl1 + 10%
		&.active_parent>a
			border-color cl3
			background none


	a
		display block
		padding 14rem 3rem 14rem 0
		font-size fzn - 3rem
		color #fff
		text-decoration none
		border-left 3rem solid transparent
		text-align center

		&:hover
			background cl1 + 10%
		&:before
			margin 0 0 5rem
			display block
			text-align center
			font-size 24rem
			height 26rem
			transition none

		&.icon-menu-dashboard
			&:before
				font-size 27rem
		&.icon-menu-transaction
			&:before
				font-size 26rem
		&.icon_menu_post
			&:before
				font-size 17rem

		&.icon-menu-clients2
			&:before
				font-size 38rem
				line-height 28rem

		&.title_submenu
			&:hover
				background none
				cursor default

	// подменю слева
	.submenu
		li
			margin 0
			&.active a
				border-color cl3
		a
			font-size fzn - 3rem
			padding-left 10rem
			text-transform none


		li.active a, a.active
			&:before
				background cl5

// меню справа
aside.right_menu
	position absolute
	z-index 200
	right 0
	top 0rem
	bottom 0
	width 265rem
	background: #35414C;
	background-image: linear-gradient(200deg, rgba(45,157,157,0.25) 0%, rgba(44,157,157,0.0) 50%);
	box-shadow: 0rem 2rem 4rem 0rem rgba(0,0,0,0.1), 0rem 0rem 1rem 0rem rgba(0,0,0,0.22);
	padding-top 25rem
	overflow auto

	&::-webkit-scrollbar
		height 0rem
		width 0rem
	&::-webkit-scrollbar-thumb
		width 0rem
		border 0rem


	// кнопка сделать выписку
	.right_menu_button
		padding 0 25rem 25rem
		.button
			width 100%
			padding 0



// каркас
section.main
	position absolute
	top 60rem
	left 0rem
	right 0rem
	bottom 0
	z-index 10

	&.section_areas
		background #fff
		padding 0

.section_top_area
	background cbglight
	padding 25rem
	border-bottom 3rem solid cseparator

.section_content
	padding 30rem 15rem 30rem 25rem
	overflow-x hidden
	overflow-y scroll
	// overflow-y overlay
	-webkit-overflow-scrolling touch
	position absolute
	top 0
	right 265rem
	bottom 0
	left 0
	.side_right_fixed
		padding-top 30rem

.flex_row
	display flex


.content
	box-sizing border-box
	flex 1 1
	width 70%

	.content_notice
		padding 100rem 0
		.notice_center
			width 400rem
			margin 0 auto
			text-align center
			color ctextlight



.side
	min-width 270rem
	max-width 350rem
	width 26%
	flex 0 0 auto
	margin-left 20rem

	&.side_small
		min-width 220rem
		max-width 350rem
		width 23%
	&.side_small_fixed
		width 255rem

	&.side_border
		padding-left 25rem
		margin-left 25rem
		margin-top -25rem
		padding-top 25rem
		border-left 1rem solid cbdlight
.side_padding
	padding-left 20rem




article.page
	position fixed
	// overflow hidden
	z-index 1050
	right 0
	left auto!important
	bottom 0
	top 60rem
	width 66%
	min-width 900rem
	max-width 1000rem
	background #fff
	box-shadow -4rem 0rem 30rem rgba(cl1,0.25)
	box-sizing border-box
	transition width .4s ease, max-width .4s ease, transform .4s ease, opacity .4s ease
	will-change width, max-width
	opacity 0
	transform translateX(200rem)

	@media (max-width: 945px)
		// max-width calc(100% - 45rem)
		// min-width calc(100% - 45rem)
		left 45rem!important
		right auto!important
		position absolute

	&.hide
		// animation pageHide .5s ease both
		opacity 0
		transform translateX(200rem)
		pointer-events none
	&.open
		// animation pageOpen .5s ease backwards
		opacity 1
		transform translateX(0rem)

	&.fullsize
		width 100%!important
		max-width 2000rem

	&.normalsize
		width 66%

	.page_left
		position absolute
		right 0rem
		left 0
		top 0
		bottom 0

		.page_header
			margin-right 0
		.page_content
			right 0

	&.side_right
		.page_left
			position absolute
			right 270rem
			left 0
			top 0
			bottom 0
			.page_header
				margin-right 0
			.page_content
				right 0
		.page_header
			margin-right 270rem
		.page_content
			right 270rem

	&.side_right_wide
		.page_left
			right 340rem
			.page_header
				margin-right 0
			.page_content
				right 0
		.page_header
			margin-right 340rem
		.page_content
			right 340rem



	&.open ~ .page.open
		transform translateX(-12rem)
		z-index 1049
		.page_expand
			opacity 0
		& ~ .page.open
			transform translateX(-24rem)
			z-index 1048
			& ~ .page.open
				transform translateX(-36rem)
				z-index 1047
				& ~ .page.open
					transform translateX(-48rem)
					z-index 1046

	&.hide ~ .page.open
		z-index 1049
		& ~ .page.open
			z-index 1048
			& ~ .page.open
				z-index 1047
				& ~ .page.open
					z-index 1046

	// промо страницы
	&.page_promo
		overflow auto
		overflow overlay
		overflow-x hidden
		.page_header
			height 354rem
			background cbgsky
			padding 44rem 280rem 0 75rem
			box-shadow none
			h1
				font-size 50rem
				font-weight fwxl
				margin 0 0 30rem
				max-width 100%
			h3
				font-size 20rem
				font-weight fwl
				margin 0 0 30rem
			p
				font-size fzn
				font-weight fwl
		.page_content
			position relative
			top auto
			left auto
			right auto
			bottom auto
			padding-top 50rem
			padding-left 70rem
			padding-right 70rem
		.page_promo_title
			font-size 30rem
			font-weight fwl
			margin 0 0 30rem
			text-align center
// шапка слоя
.page_header
	height 80rem
	background #fff
	padding 25rem 30rem 0
	box-sizing border-box
	z-index 100
	box-shadow 0 6rem 5rem -7rem rgba(cl1,0.3)
	// transition box-shadow .2s

	&.clean
		border-bottom none
		box-shadow none!important
		& + .page_content
			padding-top 10rem

	&.header_forward
		z-index 2100
		background transparent

	&.shadow
		box-shadow 0 6rem 17rem -7rem rgba(cl1,0.2)
		transition box-shadow .5s

	h1
		display inline-block
		margin 0 30rem 0 35rem
		color ctext
		max-width calc(100% - 100rem)
		vertical-align top
		&.f_small
			font-size 22rem!important
		.link_dashed
			max-width 100%
			display inline-block
			white-space nowrap
			color ctext

			span
				display inline-block
				overflow ellipsis
				max-width 100%
				border-bottom-color transparent
			.icon-pencil
				display inline-block
				margin-left 10rem
				font-size fzn + 2rem
				vertical-align 11rem
				color clinklight
	.import_1c
		display inline-block
		height 16rem
		width 30rem
		background url(../images/1c_icon.png) no-repeat 0 0
		background-size contain
	.payment_count, .payroll_count
		width 95rem
		font-size 26rem
		padding 0 7rem
		font-weight fwl
		vertical-align 0
		margin-top -5rem
	.payroll_count
		width 65rem

	.page_close
		position absolute
		top 31rem
		left 30rem
		width 18rem
		height 18rem
		display inline-block
		color ctext
		font-size 18rem
		text-decoration none
		transition color .2s
		&:hover
			color rgba(ctext,0.7)
		&:before
			width 18rem
			height 18rem
			margin 0
			vertical-align 0


	// .page_expand
	// 	&.rotate
	// 		transition 0
	// 		&:before
	// 			transform rotate(180deg)
	// 			transition 0

	.page_expand
		position absolute
		top calc(50vh - 40rem)
		left -16rem
		width 16rem
		height 50rem
		line-height 48rem
		text-align center
		font-size 12rem
		color ctextlight
		border-top-left-radius 90rem 50rem
		border-bottom-left-radius 90rem 50rem
		background #fff
		box-shadow -4rem 0 5rem rgba(49,68,93,0.08)
		text-align center
		transition transform .3s, left .3s, box-shadow .3s
		&:before
			width auto
			margin 0
			transition transform .2s
			transform translateX(2rem)
		&:hover
			&:before
				transform translateX(0rem)
		&.rotate
			transform scaleX(-1)
			left 0
			box-shadow -1rem 0 3rem rgba(49,68,93,0.2)

	.header_action
		float right
		margin-top 5rem
		padding-left 1rem
		a
			font-size fzn
			line-height 22rem
			vertical-align middle
			display inline-block
			color ctext
			// margin 0 0 0 5rem

			text-decoration none
			&:before
				font-size 22rem
				vertical-align -4rem
				margin-right 10rem
			&:hover, &:hover:before
				color clink

			&.icon-chat
				&:hover
					&:before
						color ctextsuccess
			&.icon-favorites
				margin-top -4rem
				&:before
					font-size 26rem
	.header_button
		display inline-block
		margin-top -3rem



@media screen and (-webkit-min-device-pixel-ratio:0)
	.page_header
		box-shadow 0 6rem 7rem -7rem rgba(cl1,0.3)
		&.shadow
			box-shadow 0 8rem 20rem -7rem rgba(cl1,0.2)

	_::-webkit-full-page-media, _:future, :root  .page_header
		box-shadow 0 6rem 5rem -7rem rgba(cl1,0.3)
		&.shadow
			box-shadow 0 6rem 17rem -7rem rgba(cl1,0.2)



// контент слоя
.page_content
	position absolute
	top 80rem
	left 0
	bottom 0
	right 0
	overflow-x hidden
	overflow-y auto
	padding 30rem
	-webkit-overflow-scrolling touch
	&:after
		content ' '
		display block
		height 30rem
		width 100%
		bottom 0

// сайдбар слоя
.page_side
	position absolute
	z-index 100
	top 0
	right 0
	width 270rem
	bottom 0
	background cbgsky
	background-clip border-box
	overflow-x hidden
