article.page
	position fixed
	// overflow hidden
	z-index 1050
	right 0
	left auto!important
	bottom 0
	top 40px
	width 66%
	min-width 900px
	max-width 1000px
	background #fff
	box-shadow -4px 10px 30px rgba(cl1,0.25)
	box-sizing border-box
	transition width .4s ease, max-width .4s ease, transform .5s ease, opacity .5s ease
	will-change width, max-width
	opacity 0
	transform translateX(200px)

	@media (max-width: 945px)
		// max-width calc(100% - 45px)
		// min-width calc(100% - 45px)
		left 45px!important
		right auto!important
		position absolute

	&.hide
		// animation pageHide .5s ease both
		opacity 0
		transform translateX(200px)
		pointer-events none
	&.open
		// animation pageOpen .5s ease backwards
		opacity 1
		transform translateX(0px)

	&.fullsize
		width 100%!important
		max-width 2000px

	&.normalsize
		width 66%


	&.side_right
		.page_header
			margin-right 270px
		.page_content
			right 270px

	&.side_right_wide
		.page_header
			margin-right 340px
		.page_content
			right 340px

	&.page_small
		// min-width 740px
		// width 45%
		.page_content
			padding-right 24%

	&.open ~ .page.open
		transform translateX(-12px)
		z-index 1049
		.page_expand
			opacity 0
		& ~ .page.open
			transform translateX(-24px)
			z-index 1048
			& ~ .page.open
				transform translateX(-36px)
				z-index 1047
				& ~ .page.open
					transform translateX(-48px)
					z-index 1046

	&.hide ~ .page.open
		z-index 1049
		& ~ .page.open
			z-index 1048
			& ~ .page.open
				z-index 1047
				& ~ .page.open
					z-index 1046

// шапка слоя
.page_header
	height 80px
	background #fff
	padding 23px 30px 0
	box-sizing border-box
	z-index 100
	box-shadow 0 6px 5px -7px rgba(cl1,0.3)
	transition box-shadow .2s

	&.clean
		border-bottom none
		box-shadow none
		& + .page_content
			padding-top 10px

	&.header_forward
		z-index 2100
		background transparent

	&.shadow
		box-shadow 0 6px 17px -7px rgba(cl1,0.2)
		transition box-shadow .5s

	h1
		display inline-block
		margin 0 30px 0 35px
		color ctext
		max-width calc(100% - 100px)
		&.f_small
			font-size 22px!important
		.link_dashed
			max-width 100%
			display inline-block
			white-space nowrap
			span
				display inline-block
				overflow ellipsis
				max-width 100%
			.icon-pencil
				display inline-block
				margin-left 10px
				font-size fzn + 3px
				vertical-align 7px
				color clinklight


	.page_close
		position absolute
		top 31px
		left 30px
		width 18px
		height 18px
		display inline-block
		color ctext
		font-size 18px
		text-decoration none
		&:hover
			color clink
		&:before
			width 18px
			height 18px
			margin 0
			vertical-align 0


	// .page_expand
	// 	&.rotate
	// 		transition 0
	// 		&:before
	// 			transform rotate(180deg)
	// 			transition 0

	.page_expand
		position absolute
		top calc(50vh - 40px)
		left -16px
		width 16px
		height 50px
		line-height 48px
		text-align center
		font-size 12px
		color ctextlight
		border-top-left-radius 90px 50px
		border-bottom-left-radius 90px 50px
		background #fff
		box-shadow -4px 0 5px rgba(49,68,93,0.08)
		text-align center
		transition transform .3s, left .3s, box-shadow .3s
		&:before
			width auto
			margin 0
			transition transform .2s
			transform translateX(2px)
		&:hover
			&:before
				transform translateX(0px)
		&.rotate
			transform scaleX(-1)
			left 0
			box-shadow -1px 0 3px rgba(49,68,93,0.2)

	.header_action
		float right
		margin-top 5px
		a
			font-size 22px
			line-height 22px
			vertical-align middle
			display inline-block
			margin 0 0 0 5px
			color clinklight
			&:before
				color clinklight
			&:hover:before
				color cl2
			&.icon-save
				font-size 18px
			&.icon-mail-sent
				font-size 26px
			&.icon-share
				font-size 18px
			&.icon-chat
				font-size 19px
				&:hover
					&:before
						color ctextsuccess
	.header_button
		display inline-block
		vertical-align 4px

	.page_number
		position absolute
		right 20px
		top 30px
		font-size fzn
		color ctextlight

@media screen and (-webkit-min-device-pixel-ratio:0)
	.page_header
		box-shadow 0 6px 7px -7px rgba(cl1,0.3)
		&.shadow
