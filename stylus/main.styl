@import 'nib'
@import 'variables.styl'

html, body
	min-height 100%
	height 100%
	position relative
	background cbglight
	min-width 945px
	animation-name fadeIn
	animation-duration .8s


body
	overflow auto
	-webkit-overflow-scrolling touch

aside
	position absolute
	width 110px
	top 0
	left 0
	bottom 0
	background cl1
	color #fff
	overflow auto
	overflow overlay
	-webkit-overflow-scrolling touch

	.aside_tablet_overlay
		visibility hidden
		position absolute
		top 0
		bottom 0
		width 100%
		height 100%
		background cl1
		a
			position absolute
			top 0
			bottom 0
			width 100%
			height 100%
			color #fff
			text-align right
			padding 7px 13px 0 0
			box-sizing border-box
			font-size fzn + 4px
			&:before
				margin 0


.aside_logo
	display block
	height 40px
	background url(../images/logo_w.svg) no-repeat center center
	background-size 90% auto
	text-indent -10000em

header
	position absolute
	top 0
	right 0
	left 110px
	height 40px
	background saturate(cbglight - 5%, 10%)
	z-index 900
	transition box-shadow .5s
	&.shadow
		box-shadow 0 12px 20px -8px rgba(cl1,0.13)
		transition box-shadow 1s

@media screen and (-webkit-min-device-pixel-ratio:0)
	header
		&.shadow
			box-shadow 0 15px 25px -8px rgba(cl1,0.13)

	_::-webkit-full-page-media, _:future, :root  .page_header
		&.shadow
			box-shadow 0 12px 20px -8px rgba(cl1,0.13)


// поиск в шапке

.header_search
	height 100%
	display inline-block
	float left
	background #fff
	z-index 1
	&:after
		left 100%
		top 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
		border-color rgba(0, 0, 0, 0)
		border-left-color #fff
		border-width 8px
		border-top-width 20px
		border-bottom-width 20px
		margin-top -20px
	&:before
		content ""
		position absolute
		left 12px
		height 100%
		width 25px
		background url(../images/icon_search.svg) no-repeat 0 center
		z-index -1

	.name
		color cl1
		position absolute
		left 45px
		top 10px
		z-index 0

	input
		position relative
		height 100%
		border none
		width 67px
		cursor pointer
		transition width .2s ease-in-out
		margin-left 25px
		padding-left 20px
		padding-right 0
		background transparent
		opacity 0
		box-sizing content-box
		z-index 10
		&::-webkit-input-placeholder
			color ctext
		&::-moz-placeholder
			color ctext
		&:-ms-input-placeholder
			color ctext!important
		&:hover
			width 75px

		&:focus
			width 250px
			transition width ease-in-out .2s
			opacity 1
			&::-webkit-input-placeholder
				color ctextholder
			&::-moz-placeholder
				color ctextholder
			&:-ms-input-placeholder
				color ctextholder!important
			& ~ .name
				opacity 0
		// &:valid
		// 	opacity 1
		// 	width 250px
		// 	& ~ .name
		// 		opacity 0


// быстрое добавление в шапке

.header_add
	position absolute
	top 0
	height 100%
	left calc(50% - 55px - 49px)
	a.add
		display block
		width 49px
		height 100%
		background cl2
		transition background-color .2s
		&:before, &:after
			content ''
			width 3px
			height 23px
			background #fff
			position absolute
			top 8px
			left 23px
			transition transform .35s
		&:after
			height 3px
			width 23px
			top 18px
			left 13px
		&:hover
			background-color cl2+10%


		&.drop-enabled
			&:before, &:after
				transform rotate(135deg)
			&:after
				transform rotate(135deg)

.drop.header_add_submenu
	top 40px!important
	left 50%!important
	transform translateX(-50%) translateX(-23px)!important
	margin-right -2000px

.header_add_drop.drop-content-inner
	padding 25px 35px
	max-height 100vh
	overflow visible
	&:after, &:before
		bottom 100%
		left 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
	&:after
		border-color rgba(255, 255, 255, 0)
		border-bottom-color #fff
		border-width 8px
		margin-left -8px
	&:before
		border-color rgba(0, 0, 0, 0)
		border-bottom-color rgba(0,0,0,0.2)
		border-width 9px
		margin-left -9px
	h3
		font-size fzn - 4px
		font-weight fwm
		text-transform uppercase
		margin 0 0 15px
	.col
		width 194px
		& ~ .col
			margin-left 60px
	.quick_add
		margin -10px -10px 0!important
	li
		a
			padding-left 0
			padding-right 0
			color clink
			&:hover
				background none
				color cl2

	.more
		clear both
		padding 15px 0 0
		margin 0 0 -5px 0
		text-align right
		a
			text-decoration none
			color ctextlight
			font-size fzn - 3px
			&:hover
				color cl2





.header_chat
	position absolute
	top 0
	height 100%
	left calc(50% - 55px + 1px)
	a
		display block
		height 100%
		width 49px
		background cl3 url(../images/icon_chat.svg)no-repeat center
		&:hover
			background-color cl3 + 3%
	label
		padding 0 4px
		box-sizing border-box
		height 14px
		min-width 14px
		line-height 14px
		text-align center
		border-radius 20px
		color #fff
		background cerror
		font-size fzn - 5px
		font-weight normal
		position absolute
		top 5px
		right -5px
		cursor pointer


