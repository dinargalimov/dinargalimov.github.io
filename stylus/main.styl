@import 'nib'
@import 'variables.styl'

html, body

	background cbglight
	min-width 980px
	animation-name fadeIn
	animation-duration .8s


body
	overflow auto
	-webkit-overflow-scrolling touch



header
	position absolute
	top 0
	right 0
	left 0
	height 60rem
	background saturate(cbglight - 5%, 10%)
	background-image linear-gradient(left, #00417B 0%, #2072A3 50%, #3AB0AB 100%)
	z-index 900
	transition box-shadow .5s

	&.shadow
		box-shadow 0 12rem 20rem -8rem rgba(cl1,0.13)
		transition box-shadow 1s

@media screen and (-webkit-min-device-pixel-ratio:0)
	header
		&.shadow
			box-shadow 0 15rem 25rem -8rem rgba(cl1,0.13)

	_::-webkit-full-page-media, _:future, :root  .page_header
		&.shadow
			box-shadow 0 12rem 20rem -8rem rgba(cl1,0.13)

// лого в шапке
.header_logo
	width 60rem
	height 60rem
	background #fff
	padding 18rem 0 0 18rem
	box-sizing border-box
	float left
	a
		display block
		width 24rem
		height 24rem
		background url(../images/header_logo.svg) no-repeat 0 0
		background-size 100%
		text-indent -10000em

// поиск в шапке

.header_search

	height 100%
	display inline-block
	z-index 1
	background #fff
	padding-left 10rem
	background #fff url(../images/icon_search.svg) no-repeat 10rem center
	background-size 18rem auto
	&:after
		left 100%
		top 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
		border-color rgba(0, 0, 0, 0)
		border-left-color #fff
		border-width 13rem
		border-top-width 30rem
		border-bottom-width 30rem
		margin-top -30rem

	.name
		color ctext
		position absolute
		top 0
		left 38rem
		padding 21rem 0 0 0
		width 92rem
		height 100%
		box-sizing border-box
		z-index 0
		text-transform uppercase
		font-size fzn - 2rem
		font-weight fwr


	input
		position relative
		height 100%
		width 92rem
		border none
		cursor pointer
		padding-left 0rem
		padding-right 20rem
		opacity 0
		box-sizing border-box
		z-index 10
		font-size fzn + 2rem
		transition .2s opacity, .3s width, .1s margin .2s

		&::-webkit-input-placeholder
			color ctext
		&::-moz-placeholder
			color ctext
		&:-ms-input-placeholder
			color ctext!important


		&:focus, &.active
			width calc(50vw - 180rem)
			margin-left 28rem
			opacity 1
			transition .2s opacity, .3s width, 0s margin
			&::-webkit-input-placeholder
				color ctextholder
			&::-moz-placeholder
				color ctextholder
			&:-ms-input-placeholder
				color ctextholder!important

		// &:valid
		// 	opacity 1
		// 	width 250rem
		// 	& ~ .name
		// 		opacity 0

// меню в шапке
.header_menu
	position absolute
	left 180rem
	top 0
	// width calc(50% - 180rem - 21rem)
	width 28%
	box-sizing border-box
	padding 0 10rem
	display flex
	justify-content center
	.header_menu_inner
		max-width 370rem
	ul
		display flex
		justify-content space-around
	li
		margin 0 15rem
	li.active
		a
			color #fff
		span
			border-bottom-color cl3
	a
		display block
		line-height 63rem
		font-weight fwr
		font-size fzn - 2rem
		color rgba(#fff,0.8)
		text-transform uppercase
		text-decoration none
		span
			display block
			height 55rem
			border-bottom 5rem solid transparent
		&:hover
			color #fff

// быстрое добавление в шапке

.header_add
	position absolute
	top 9rem
	left calc(50% - 21rem)
	a.add
		display block
		width 42rem
		height 42rem
		background #fff
		transition background-color .2s
		border-radius 42rem
		&:before, &:after
			content ''
			width 2px
			height 20rem
			background #2072A3
			position absolute
			top 11rem
			left 20rem
			transition transform .35s
		&:after
			height 2px
			width 20rem
			top 20rem
			left 11rem

		&.drop-enabled
			&:before, &:after
				transform rotate(135deg)



.drop.header_add_submenu
	top 60rem!important
	left 0!important
	right 0!important
	transform translateX(0%)!important
	margin-right -2000rem
	text-align center
	.drop-content
		display inline-block
		text-align left


.header_add_drop.drop-content-inner
	padding 25rem 35rem
	max-height 100vh
	overflow visible
	&:after, &:before
		bottom 100%
		left 50%
		border solid transparent
		content " "
		height 0
		width 0
		position absolute
		pointer-events none
	&:after
		border-color rgba(255, 255, 255, 0)
		border-bottom-color #fff
		border-width 8rem
		margin-left -8rem
	&:before
		border-color rgba(0, 0, 0, 0)
		border-bottom-color rgba(0,0,0,0.1)
		border-width 9rem
		margin-left -9rem
	h3
		font-size fzn - 4rem
		font-weight fwm
		text-transform uppercase
		margin 0 0 15rem
	.col
		width 240rem
		& ~ .col
			margin-left 60rem
	.quick_add
		margin -10rem -10rem 0!important
	li
		a
			padding-left 0
			padding-right 0
			color clink
			&:hover
				background none
				color cl2

	.more
		clear both
		padding 15rem 0 0
		margin 0 0 -5rem 0
		text-align right
		a
			text-decoration none
			color ctextlight
			font-size fzn - 3rem
			&:hover
				color cl2





// Кнопка чата внизу справа

.button_chat
	position fixed
	right 20rem
	bottom 20rem
	width 60rem
	height 60rem
	z-index 2000
	a
		display block
		height 100%
		width 100%
		background cl3 url(../images/icon_chat.svg)no-repeat center 55%
		border-radius 60rem
		transition background .2s
		box-shadow 0 4rem 20rem rgba(0,0,0,0.1)
		&:hover
			background-color cl3 + 3%
	label
		padding 0 4rem
		box-sizing border-box
		height 26rem
		min-width 26rem
		line-height 26rem
		text-align center
		border-radius 20rem
		color #fff
		background cerror
		font-size fzn
		position absolute
		top -3rem
		right -3rem
		cursor pointer
		font-weight fwn
