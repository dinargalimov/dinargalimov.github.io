			// 	border-width 7px
			// 	border-top-width 5px
			// 	margin-left -7px
			a
				background desaturate(cl1,30%) + 15%
				font-weight normal
				text-decoration none



.add_news_dashboard, .add_news_email
	.col.f_left
		width 50%
	.col.f_right
		width 45%
		box-sizing border-box

	.who_send
		input[type='number']
			width 50px
			text-align center
			padding-right 2px
			margin-top -5px
	.test_send
		margin-top 80px
		.title
			font-size fzn - 2px
			margin 0 0 10px
			color ctextlight
.add_news_dashboard
	.who_send
		height 173px

.add_news_email
	textarea
		min-height 175px
