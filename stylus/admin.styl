header
	background desaturate(cl1,30%) + 5%
	left 0
	color #fff
section.main
	left 0

.header_profile
	.header_profile_name
		color #fff
		.avatar
			width 30px
			height 30px
			font-size @width*0.5
			margin-top -2px
			margin-right 5px
	.header_profile_settigs a,
	.header_profile_logout a
		color #fff

.profile_progress
	float right
	display inline-block
	margin 9px 20px 0 0
	color ctextlight
	font-size fzn - 1px
	position absolute
	left 50%
	color #fff
	.success_text
		color cl3 + 30%
	.error_text
		color ctexterror + 40%

.header_admin_menu
	display inline-block
	height 100%
	margin 0 0 0 25px
	li
		float left
		height 100%
		position relative
		margin-right 1px
		a
			color #fff
			display block
			height 100%
			height 40px
			line-height 38px
			padding 0 15px
			transition none

			&:hover
				background desaturate(cl1,30%) + 15%
			&:before
				transition none
		&.active

			// &:after
