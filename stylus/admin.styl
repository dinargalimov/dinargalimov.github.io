header
	left 0
section.main
	left 0

.header_profile_name
	.avatar
		width 30px
		height 30px
		font-size @width*0.5
		margin-top -2px
		margin-right 5px

.profile_progress
	float right
	display inline-block
	margin 9px 20px 0 0
	color ctextlight
	font-size fzn - 1px
	position absolute
	left 50%

.header_admin_menu
	display inline-block
	height 100%
	margin 0 0 0 25px
	li
		float left
		height 100%
		position relative
		a
			color clink
			display block
			height 100%
			height 40px
			line-height 38px
			padding 0 15px
			transition none

			&:hover
				color cl2
			&:before
				transition none
		&.active
			background cl3
			text-shadow 0 2px 0 rgba(#000,0.04)
			&:after
				top 100%
				left 50%
				border solid transparent
				content " "
				height 0
				width 0
				position absolute
				pointer-events none
				border-color rgba(136, 183, 213, 0)
				border-top-color cl3
				border-width 7px
				border-top-width 5px
				margin-left -7px
			a
				color #fff
				font-weight normal
				text-decoration none






