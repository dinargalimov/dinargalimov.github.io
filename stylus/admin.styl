header
	background desaturate(cl1,30%) + 5%
	left 0
	color #fff
section.main
	left 0

.header_profile
	.header_profile_name
		color #fff
		.avatar
			width 30px
			height 30px
			font-size @width*0.5
			margin-top -2px
			margin-right 5px
	.header_profile_settigs a,
	.header_profile_logout a
		color #fff

	.header_profile_settigs,
	.header_profile_help,
	.header_profile_logout,
	.header_profile_name
		border-color desaturate(cl1,30%) + 12%

.profile_progress
	float right
	display inline-block
	margin 9px 20px 0 0
	color ctextlight
	font-size fzn - 1px
	position absolute
	left 50%
	color #fff
	.success_text
		color cl3 + 30%
	.error_text
		color ctexterror + 40%

.header_admin_menu
	display inline-block
	height 100%
	margin 0 0 0 10px
	li
		float left
		height 100%
		position relative
		margin-right 1px
		a
			color #fff
			display block
			height 100%
			height 40px
			line-height 38px
			padding 0 15px
			transition none
			text-decoration none

			&:hover
				background desaturate(cl1,30%) + 15%
			&:before
				transition none
		&.active

			// &:after
			// 	top 100%
			// 	left 50%
			// 	border solid transparent
			// 	content " "
			// 	height 0
			// 	width 0
			// 	position absolute
			// 	pointer-events none
			// 	border-color rgba(136, 183, 213, 0)
			// 	border-top-color cl3
			// 	border-width 7px
			// 	border-top-width 5px
			// 	margin-left -7px
			a
				background desaturate(cl1,30%) + 15%
				font-weight normal
				text-decoration none



.add_news_dashboard, .add_news_email
	.col.f_left
		width 50%
	.col.f_right
		width 45%
		box-sizing border-box

	.who_send
		input[type='number']
			width 50px
			text-align center
			padding-right 2px
			margin-top -5px
	.test_send
		margin-top 80px
		.title
			font-size fzn - 2px
			margin 0 0 10px
			color ctextlight
.add_news_dashboard
	.who_send
		height 173px

.add_news_email
	textarea
		min-height 175px
	.test_send
		margin-top 20px

// статистика в админке
.admin_stat_columns
	display flex
	.stat_column
		width 100%
		max-width 400px
		margin-right 20px
		margin-bottom 0
		max-height calc(100vh - 150px)
		overflow auto
		&:last-child
			margin-right 0
	.stat_all_task
		font-size fzn + 2px
		color ctextlight
		.total
			font-weight fwm
			color ctext
	.subtitle
		color ctextlight
		font-weight fwm
		margin 0 0 5px
		font-size fzn - 2px
	.stat_list
		li
			padding 10px 0
			border-bottom 1px solid cbdlight
			&:last-child
				border-bottom none
			.name
				max-width calc(100% - 110px)
				display inline-block
				overflow ellipsis
			.value
				float right
				color ctextlight
			.total
				color ctext
				font-weight bold

		&.sub_list
			font-size fzn - 2px
			margin-left 20px
			li
				padding 7px 0

//------------------- время задачи -------------------
.task_side_time
	text-align center
	font-size 22px
	margin-bottom 25px
	[class*="icon-"]
		&:before
			font-size 26px
			vertical-align -5px
			margin-right 10px

//------------------- инфо клиента в слое задачи -------------------
.task_side_client
	font-size fzn - 2px
	text-align center
	background #fff
	padding 15px
	margin-bottom 30px
	.avatar
		width 40px
		height 40px
		font-size @width*0.5
		margin 0 0 5px
	.name
		font-size fzn
		margin 0 0 5px
	.desc
		// margin-left 50px
	.company
		color ctextlight
		margin 0 0 13px
		font-size fzn - 5px
	.status
		position absolute
		top 10px
		right 10px
		[class*='info_label']
			font-size fzn - 6px

// страница компании - остатки
.admin_company_balance
	margin 0 0 10px
	.value
		margin-left 20px
		display inline-block
		font-size 20px
		font-weight fwl
		&.rur
			color cRUR
		&.usd
			color cUSD
		&.eur
			color cEUR
		&.cny
			color cCNY
.admin_company_card
	border-top 1px solid cbdlight
	padding-top 10px
	.value
		margin-left 5px
		display inline-block
		font-size fzn
		background cbglight
		border-radius 5px
		padding 4px 6px 5px
