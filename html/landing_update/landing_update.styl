@import 'nib'

// темно-синий
cl1 = #2D4668
// голубой
// cl2 = #00aeef
cl2 = #00a8e7
// зеленый
cl3 = #81c624
// светло-голубой
cl4 = #7dd3f7
// салатовый
cl5 = #d7df21


// шрифт
ffn = 'Open Sans', Arial

fwl = 300
fwn = 400
fwm = 600
fwb = bold

// кегель
fzn = 16px

// текст
ctext = #454E59

ctextlight = #828A96

ctextholder = #aaa
ctextdis = #bbb

ctexterror = #D0021B
ctextsuccess = cl3 - 20%
ctextwarning = #DA9D04
ctextdanger= #F57F1E


clink = #006AA1
clinklight = #6690B0


cbglight = #ECF2F6

// cbglight = #EEF2F5
cbgsky = saturate(cbglight + 60%, 50%)
cbghighlight = cl2 + 90%
cbglightgreen = cl3 + 90%

cbginfo = #FFFBDB
cbgerror = #FFEBEB
cbgsuccess = #EDFAD7

// цвет границы ошибки
cerror = #E54D4D
csucces = cl3

brbut = 2px
brform = 1px

// цвет границы форм
cbd = #D0D3D7
cbdlight = cbd + 50%
cbdlightsky = saturate(cbglight - 10%, 10%)

// цвет разделителя
cseparator = saturate(cbglight - 5%, 40%)

cRUR = #E8A807
cUSD = cl3 - 20%
cEUR = cl2
cCNY = #E54D4D

*
	margin 0
	padding 0
	vertical-align baseline
	outline none

html, body
	font-size 16px
	font-family 'Roboto', 'sans serif', Arial
	font-weight 400
	color #454E59
	min-height 100%
	height 100%
	line-height 1.3

.reg
	background cbglight
	position absolute
	width 100%
	min-height 100%
	background radial-gradient(65% 100%, #ECF2F6 45%, #ECF2F6 - 20% 100%)

.page_clear
	position absolute
	width 100%
	height 100%
	background url('404_back.png'),radial-gradient(65% 100%, #ECF2F6 45%, #ECF2F6 - 20% 100%)
	background-repeat no-repeat
	background-position center
	background-size auto 95%, auto
	overflow auto
	.logo
		height 50px
		position absolute
		background url('logo_full_d.svg') no-repeat 0 0
		text-indent -10000em
		top 20px
		left 20px
		width 200px
		background-size 100% auto
	.content_wrap
		display table
		width 100%
		height 100%
	.content_cell
		display table-cell
		width 100%
		vertical-align middle
	.content
		width 80%
		max-width 600px
		margin 0 auto
		text-align center
		p
			margin 0 0 15px


	.contact
		position absolute
		right 20px
		top 20px
		color ctext
		font-size 14px
		z-index 100
		a
			text-decoration none
			color #454E59
			font-size 18px
			display inline-block
			margin 0 5px
			vertical-align middle
			&:hover
				color #006AA1
	h1
		font-size 42px
		font-weight 300
		margin 0 0 35px
		line-height 40px
	p
		font-size 20px
	form
		display inline-block
		margin-top 50px
		padding 30px
		background rgba(#fff,0.5)
		p
			font-size 16px


input[type="text"],
input[type="password"],
input[type="search"],
input[type="email"],
input[type="tel"],
input[type="time"],
input[type="date"],
input[type="number"],
textarea
	height 40px
	border 1px solid cbd
	border-radius brform
	display inline-block
	background-color #fff
	font-family ffn
	font-size fzn - 1px
	font-weight fwn
	padding 0 15px
	color ctext
	box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0.18)
	box-sizing border-box
	vertical-align middle
	-webkit-appearance textfield
	transition border-color .2s, color .2s, background .2s, box-shadow .2s
	margin 0 0 10px

	&:focus
		border-color cl2
		box-shadow inset 0px 2px 2px -2px rgba(0,0,0,0)
	&.big
		height 46px
		padding 0 15px
		font-size fzn + 2px

.button
	display inline-block
	font-size fzn + 3px
	font-family ffn
	font-weight fwm
	color #fff
	background cl2
	background-repeat no-repeat
	background-position center
	background-size 0
	text-align center
	height 46px
	line-height 44px
	border-radius brbut
	padding 0 30px
	padding-bottom 3px
	box-sizing border-box
	border none
	text-decoration none
	vertical-align middle
	cursor pointer
	box-shadow inset 0px -2px 0px 0px rgba(#000,0.15), inset 0px -3px 0px 0px rgba(#fff,0.1)
	text-shadow 0 2px 0 rgba(#000,0.04)
	transition background-color .2s, color .2s, box-shadow .2s
	z-index 1
	overflow hidden
	-webkit-appearance none
	appearance none
	margin 0 0 10px

	&:hover
		background-color cl2 + 5%
		color #fff
		box-shadow inset 0px -2px 0px 0px rgba(#000,0.2), inset 0px -3px 0px 0px rgba(#fff,0.1), 0 1px 1px rgba(#000,0.2)

@media screen and (max-width:720px)
	.page_clear
		.logo
			left 0
			top 0px
			position relative
			display block
			width 100%
			background-position center
			background-size auto 100%
			height 40px
			margin 20px 0 20px
		.contact
			position relative
			display block
			width 100%
			text-align center
			right auto
			top auto
		.content_wrap
			display block
			width 100%
			height auto
		.content_cell
			display block
			width 100%
			vertical-align middle
			padding-top 40px

		h1
			font-size 30px
			line-height 30px
			margin-bottom 20px
		p
			font-size 16px
		form
			margin-top 20px
